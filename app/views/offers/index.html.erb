<div class="container-fluid py-2">
  <div class="row g-2">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body d-flex flex-column flex-sm-row align-items-sm-center justify-content-between gap-3">
          <div>
            <h1 class="h4 mb-1">Teklifler</h1>
            <p class="text-secondary mb-0">Toplam <strong><%= @offers.size %></strong> teklif</p>
          </div>
          <div class="d-flex flex-wrap align-items-center gap-2">
            <%= filter_panel_toggle_button %>
            <%= new_record_button("Yeni Teklif", new_offer_path) %>
            <%= home_nav_button(home_path) %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-12">
      <div class="card shadow-sm hidden" data-filter-panel>
        <div class="card-body">
          <%= filter_form_with url: offers_path, layout: :two do |f| %>
            <div>
              <%= f.label :scope, "Kapsam", class: "form-label text-uppercase small fw-semibold text-secondary mb-1" %>
              <%= f.select :scope,
                    options_for_select([
                      ["Aktif", "active"],
                      ["Arsiv", "archived"],
                      ["Tüm Kayıtlar", "all"]
                    ], @scope || params[:scope] || "active"),
                    {},
                    class: "form-input" %>
            </div>
            <%= filter_actions_row do %>
              <%= f.hidden_field :per_page, value: @per_page %>
              <%= filter_submit_button %>
              <%= clear_filter_button(offers_path(per_page: @per_page)) %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
              <thead>
                <tr>
                  <th>Teklif No</th>
                  <th>Müşteri</th>
                  <th>Tarih</th>
                  <th class="text-end">Toplam</th>
                  <th class="text-end">Durum</th>
                  <th class="text-end">Aksiyon</th>
                </tr>
              </thead>
              <tbody>
                <% @offers.each do |offer| %>
                  <tr>
                    <td class="fw-semibold"><%= offer["offer_number"].to_s %></td>
                    <td><%= offer.dig("companies", "name").to_s.presence || "-" %></td>
                    <td><%= offer["offer_date"].to_s %></td>
                    <td class="text-end"><%= offer["gross_total"].to_s %></td>
                    <td class="text-end"><%= offer["status"].to_s %></td>
                    <td class="text-end">
                      <div class="d-inline-flex align-items-center gap-2">
                        <%= link_to "Gör", offer_path(offer["id"]), class: "btn-secondary" %>
                        <% if offer["deleted_at"].present? %>
                          <%= link_to "Geri Yükle",
                                restore_offer_path(offer["id"]),
                                data: { turbo_method: :patch, turbo_confirm: "Bu teklifi geri yüklemek istediginize emin misiniz?" },
                                class: "btn-secondary" %>
                        <% else %>
                          <%= link_to "Arsivle",
                                offer_path(offer["id"]),
                                data: { turbo_method: :delete, turbo_confirm: "Bu teklifi arsivlemek istediginize emin misiniz?" },
                                class: "btn-secondary" %>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>

                <% if @offers.empty? %>
                  <tr>
                    <td colspan="6" class="text-center py-5">
                      <div class="mx-auto" style="max-width:420px;">
                        <div class="fw-semibold mb-1">Henüz kayitli teklif yok</div>
                        <div class="text-secondary">İlk teklifi olusturmak için yukaridaki butonu kullanin.</div>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
          <div class="text-secondary">
            Sayfa <strong><%= @page %></strong> / <span><%= @per_page %> kayit</span>
          </div>
          <div class="d-flex align-items-center gap-2">
            <div class="d-none d-sm-flex align-items-center gap-1">
              <span class="small text-secondary">Sayfa boyutu:</span>
              <% [25, 50, 100].each do |size| %>
                <% active = @per_page == size %>
                <%= link_to size.to_s, offers_path(request.query_parameters.merge(page: 1, per_page: size)),
                      class: "btn btn-sm #{active ? 'btn-dark' : 'btn-outline-secondary'}" %>
              <% end %>
            </div>
            <% if @has_prev %>
              <%= link_to "Önceki", offers_path(request.query_parameters.merge(page: @page - 1, per_page: @per_page)), class: "btn-secondary" %>
            <% else %>
              <span class="btn-secondary opacity-50 pointer-events-none">Önceki</span>
            <% end %>

            <% if @has_next %>
              <%= link_to "Sonraki", offers_path(request.query_parameters.merge(page: @page + 1, per_page: @per_page)), class: "btn-secondary" %>
            <% else %>
              <span class="btn-secondary opacity-50 pointer-events-none">Sonraki</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


