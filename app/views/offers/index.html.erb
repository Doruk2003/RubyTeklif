<div class="min-h-screen bg-[#f6f3ee] px-4 pb-3 pt-0">
  <div class="w-full space-y-5">
    <div class="mt-[-2rem] rounded-2xl bg-slate-50/90 p-5 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.30)]">
      <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-2xl font-semibold tracking-tight text-slate-900">Teklifler</h1>
          <p class="text-sm text-slate-500">Toplam <span class="font-semibold text-slate-800"><%= @offers.size %></span> teklif</p>
        </div>
        <div class="flex w-full flex-col gap-2 sm:w-auto sm:flex-row sm:items-center">
          <%= link_to "Yeni Teklif", new_offer_path, class: "btn-primary w-full sm:w-auto" %>
          <%= link_to "Ana Sayfa", home_path, class: "btn-secondary w-full sm:w-auto" %>
        </div>
      </div>

      <div class="mt-4">
        <%= form_with url: offers_path, method: :get, local: true, class: "grid grid-cols-1 gap-3 md:grid-cols-4 md:items-end" do |f| %>
          <div>
            <%= f.label :scope, "Kapsam", class: "block text-xs font-semibold uppercase tracking-wide text-slate-700/80" %>
            <%= f.select :scope,
                  options_for_select([
                    ["Aktif", "active"],
                    ["Arsiv", "archived"],
                    ["T�m Kayitlar", "all"]
                  ], @scope || params[:scope] || "active"),
                  {},
                  class: "form-input" %>
          </div>
          <div>
            <%= f.hidden_field :per_page, value: @per_page %>
            <%= f.submit "Filtrele", class: "btn-secondary w-full" %>
          </div>
          <div>
            <%= link_to "Temizle", offers_path(per_page: @per_page), class: "btn-secondary w-full text-center" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="rounded-2xl bg-slate-50/90 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.30)]">
      <div class="overflow-x-auto">
        <table class="min-w-full text-sm">
          <thead class="sticky top-0 z-10">
            <tr>
              <th>Teklif No</th>
              <th>M�steri</th>
              <th>Tarih</th>
              <th class="text-right">Toplam</th>
              <th class="text-right">Durum</th>
              <th class="text-right">Aksiyon</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-200 bg-white">
            <% @offers.each do |offer| %>
              <tr class="odd:bg-slate-50 even:bg-white hover:bg-slate-100/70">
                <td class="font-medium text-slate-900"><%= offer["offer_number"].to_s %></td>
                <td><%= offer.dig("companies", "name").to_s.presence || "-" %></td>
                <td><%= offer["offer_date"].to_s %></td>
                <td class="text-right"><%= offer["gross_total"].to_s %></td>
                <td class="text-right"><%= offer["status"].to_s %></td>
                <td class="text-right">
                  <div class="inline-flex items-center gap-2">
                    <%= link_to "G�r", offer_path(offer["id"]), class: "btn-secondary" %>
                    <% if offer["deleted_at"].present? %>
                      <%= link_to "Geri Y�kle",
                            restore_offer_path(offer["id"]),
                            method: :patch,
                            data: { confirm: "Bu teklifi geri y�klemek istediginize emin misiniz?" },
                            class: "btn-secondary" %>
                    <% else %>
                      <%= link_to "Arsivle",
                            offer_path(offer["id"]),
                            method: :delete,
                            data: { confirm: "Bu teklifi arsivlemek istediginize emin misiniz?" },
                            class: "btn-secondary" %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>

            <% if @offers.empty? %>
              <tr>
                <td colspan="6" class="py-12 text-center">
                  <div class="mx-auto max-w-sm">
                    <div class="mb-2 text-sm font-semibold text-slate-700">Hen�z kayitli teklif yok</div>
                    <div class="text-sm text-slate-500">Ilk teklifi olusturmak i�in yukaridaki butonu kullanin.</div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="rounded-2xl bg-slate-50/90 px-4 py-3 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.45)]">
      <div class="flex items-center justify-between gap-3 text-sm">
        <div class="text-slate-600">
          Sayfa <span class="font-semibold text-slate-800"><%= @page %></span>
          <span class="text-slate-400">/</span>
          <span><%= @per_page %> kayit</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="hidden sm:flex items-center gap-1 text-xs">
            <span class="text-slate-500">Sayfa boyutu:</span>
            <% [25, 50, 100].each do |size| %>
              <% active = @per_page == size %>
              <%= link_to size.to_s, offers_path(request.query_parameters.merge(page: 1, per_page: size)),
                    class: "rounded-md px-2 py-1 #{active ? 'bg-slate-800 text-white' : 'bg-white text-slate-700 border border-slate-200'}" %>
            <% end %>
          </div>
          <% if @has_prev %>
            <%= link_to "�nceki", offers_path(request.query_parameters.merge(page: @page - 1, per_page: @per_page)), class: "btn-secondary" %>
          <% else %>
            <span class="btn-secondary opacity-50 pointer-events-none">�nceki</span>
          <% end %>

          <% if @has_next %>
            <%= link_to "Sonraki", offers_path(request.query_parameters.merge(page: @page + 1, per_page: @per_page)), class: "btn-secondary" %>
          <% else %>
            <span class="btn-secondary opacity-50 pointer-events-none">Sonraki</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>




