<div class="min-h-screen bg-[#f6f3ee] px-4 pb-3 pt-0">
  <div class="w-full space-y-2">
    <div class="rounded-2xl bg-slate-50/90 p-5 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.45)]">
      <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-2xl font-semibold tracking-tight text-slate-900">Teklif Detayi</h1>
          <p class="text-sm text-slate-500">Teklif #<%= @offer&.dig("offer_number").to_s.presence || "-" %></p>
        </div>
        <div class="flex w-full flex-col gap-2 sm:w-auto sm:flex-row sm:items-center">
          <%= link_to "Listeye D�n", offers_path, class: "btn-secondary w-full sm:w-auto" %>
          <% if @offer.present? %>
            <% if @offer["deleted_at"].present? %>
              <%= link_to "Geri Y�kle",
                    restore_offer_path(@offer["id"]),
                    method: :patch,
                    data: { confirm: "Bu teklifi geri y�klemek istediginize emin misiniz?" },
                    class: "btn-secondary w-full sm:w-auto" %>
            <% else %>
              <%= link_to "Arsivle",
                    offer_path(@offer["id"]),
                    method: :delete,
                    data: { confirm: "Bu teklifi arsivlemek istediginize emin misiniz?" },
                    class: "btn-secondary w-full sm:w-auto" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="rounded-2xl bg-slate-50/90 p-5 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.45)]">
      <% if @offer.present? %>
        <div class="grid grid-cols-1 gap-3 text-sm text-slate-700 md:grid-cols-2">
          <div><span class="font-semibold text-slate-900">M�steri:</span> <%= @offer.dig("companies", "name").to_s.presence || "-" %></div>
          <div><span class="font-semibold text-slate-900">Tarih:</span> <%= @offer["offer_date"].to_s %></div>
          <div><span class="font-semibold text-slate-900">Durum:</span> <%= @offer["status"].to_s %></div>
          <div><span class="font-semibold text-slate-900">Toplam:</span> <%= @offer["gross_total"].to_s %></div>
        </div>

        <div class="mt-5 overflow-x-auto">
          <table class="min-w-full text-sm">
            <thead class="sticky top-0 z-10">
              <tr>
                <th>A�iklama</th>
                <th class="text-right">Miktar</th>
                <th class="text-right">Birim Fiyat</th>
                <th class="text-right">Iskonto %</th>
                <th class="text-right">Tutar</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-200 bg-white">
              <% Array(@offer["offer_items"]).each do |item| %>
                <tr class="odd:bg-slate-50 even:bg-white hover:bg-slate-100/70">
                  <td><%= item["description"].to_s %></td>
                  <td class="text-right"><%= item["quantity"].to_s %></td>
                  <td class="text-right"><%= item["unit_price"].to_s %></td>
                  <td class="text-right"><%= item["discount_rate"].to_s.presence || "0" %></td>
                  <td class="text-right"><%= item["line_total"].to_s %></td>
                </tr>
              <% end %>

              <% if Array(@offer["offer_items"]).empty? %>
                <tr>
                  <td colspan="5" class="py-10 text-center text-slate-500">Teklif kalemi yok.</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="py-12 text-center text-sm text-slate-500">Teklif bulunamadi.</div>
      <% end %>
    </div>
  </div>
</div>




