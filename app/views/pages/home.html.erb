<div class="min-h-screen bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-slate-100 via-white to-slate-50">
  <div class="w-full px-4 py-3">
    <!-- Top Bar -->
    <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-slate-500">RubyTeklif</p>
        <h1 class="text-3xl font-semibold tracking-tight text-slate-900">ERP Kontrol Paneli</h1>
        <p class="text-sm text-slate-500">Teklif, müşteri ve ürün akışlarını tek merkezden yönetin.</p>
      </div>
      <div class="flex w-full flex-col gap-2 sm:w-auto sm:flex-row sm:items-center">
        <%= link_to "Yeni Müşteri", new_company_path, class: "btn-primary w-full sm:w-auto" %>
        <%= link_to "Yeni Teklif", new_offer_path, class: "btn-secondary w-full sm:w-auto" %>
      </div>
    </div>

    <!-- KPI Cards -->
    <div class="mt-8 grid grid-cols-1 gap-4 md:grid-cols-3">
      <% @kpis.each do |kpi| %>
        <div class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
          <p class="text-xs font-semibold uppercase tracking-wide text-slate-500"><%= kpi[:label] %></p>
          <div class="mt-1 flex items-end justify-between">
            <span class="text-3xl font-semibold text-slate-900"><%= kpi[:value] %></span>
            <span class="text-xs font-semibold <%= kpi[:delta_class] %>"><%= kpi[:delta] %></span>
          </div>
          <div class="mt-1.5 h-1.5 w-full rounded-full bg-slate-100">
            <div class="h-1.5 rounded-full <%= kpi[:bar_class] %> <%= kpi[:bar_width] %>"></div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Main Grid -->
    <div class="mt-8 grid grid-cols-1 gap-6 lg:grid-cols-3">
      <!-- Left -->
      <div class="lg:col-span-2 space-y-6">
        <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
          <div class="flex items-center justify-between">
            <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Son Teklifler</h2>
            <%= link_to "Tümünü Gör", offers_path, class: "text-sm font-semibold text-sky-700 hover:text-sky-800" %>
          </div>
          <div class="mt-4 overflow-hidden rounded-xl border border-slate-200">
            <table class="min-w-full divide-y divide-slate-200 text-sm">
              <thead class="table-head">
                <tr>
                  <th class="table-th">Teklif No</th>
                  <th class="table-th">Müşteri</th>
                  <th class="table-th text-right">Tutar</th>
                  <th class="table-th text-right">Durum</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-slate-100">
                <% @recent_offers.each do |offer| %>
                  <tr class="odd:bg-slate-50 even:bg-white hover:bg-slate-100/70">
                    <td class="px-4 py-3 font-medium text-slate-900"><%= offer[:number] %></td>
                    <td class="px-4 py-3 text-slate-700"><%= offer[:company] %></td>
                    <td class="px-4 py-3 text-right text-slate-700"><%= offer[:amount] %></td>
                    <td class="px-4 py-3 text-right">
                      <span class="inline-flex rounded-full px-2.5 py-1 text-xs font-semibold <%= offer[:status_class] %>"><%= offer[:status] %></span>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
          <div class="flex items-center justify-between">
            <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Operasyon Akışı</h2>
            <span class="text-xs font-semibold text-amber-600">Son 7 gün</span>
          </div>
          <div class="mt-5 grid grid-cols-1 gap-4 md:grid-cols-3">
            <% @flow_stats.each do |item| %>
              <div class="rounded-xl border border-slate-200 p-4">
                <p class="text-xs font-semibold uppercase tracking-wide text-slate-500"><%= item[:label] %></p>
                <p class="mt-1 text-2xl font-semibold text-slate-900"><%= item[:value] %></p>
                <p class="mt-1 text-xs text-slate-500"><%= item[:note] %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Right -->
      <div class="space-y-6">
        <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
          <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Hızlı İşlemler</h2>
          <div class="mt-4 grid grid-cols-1 gap-3">
            <%= link_to "Müşteri Listesi", companies_path, class: "flex items-center justify-between rounded-xl border border-slate-200 px-4 py-3 text-sm font-semibold text-slate-800 hover:bg-sky-50" %>
            <%= link_to "Teklif Oluştur", new_offer_path, class: "flex items-center justify-between rounded-xl border border-slate-200 px-4 py-3 text-sm font-semibold text-slate-800 hover:bg-amber-50" %>
            <%= link_to "Ürün Kataloğu", "#", class: "flex items-center justify-between rounded-xl border border-slate-200 px-4 py-3 text-sm font-semibold text-slate-800 hover:bg-emerald-50" %>
            <%= link_to "Raporlar", "#", class: "flex items-center justify-between rounded-xl border border-slate-200 px-4 py-3 text-sm font-semibold text-slate-800 hover:bg-slate-50" %>
          </div>
        </div>

        <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
          <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Hatırlatmalar</h2>
          <ul class="mt-4 space-y-3 text-sm text-slate-700">
            <% @reminders.each do |note| %>
              <li class="rounded-xl border border-slate-200 px-4 py-3 bg-slate-50">
                <%= note %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>


