<div class="container-fluid pt-0 pb-3 px-0 home-page-root">
  <style>
    body.home-page {
      margin: 0 !important;
      padding: 0 !important;
    }

    body.home-page .app-main {
      margin: 0 !important;
      padding: 0 !important;
    }

    body.home-page .app-flash-wrap {
      top: auto !important;
      left: auto !important;
      right: 16px !important;
      bottom: 16px !important;
      transform: none !important;
      width: min(420px, calc(100vw - 24px)) !important;
    }

    body.home-page .home-page-root {
      margin-top: 0 !important;
      padding-top: 0 !important;
    }

    .home-page-root {
      margin-top: 0 !important;
    }

    html,
    body,
    body .app-main {
      margin: 0 !important;
      padding: 0 !important;
    }

    body {
      padding-top: 0 !important;
      padding-left: 0 !important;
      padding-right: 0 !important;
    }

    :root {
      --home-top-height: 84px;
    }

    .home-header-card .card-body {
      height: var(--home-top-height);
    }

    .home-nav {
      position: relative;
      z-index: 3000;
      overflow: visible !important;
      min-height: 54px;
      height: auto;
      padding-top: 0;
      padding-bottom: 0;
      background-color: var(--bs-primary) !important;
      background-image: none !important;
      border: 0 !important;
    }

    .home-nav .navbar-collapse {
      overflow: visible !important;
    }

    .home-nav .container-fluid {
      display: flex;
      flex-direction: column;
      align-items: stretch;
      padding-top: 0;
      padding-bottom: 0;
      padding-left: 20px;
      padding-right: 20px;
    }

    .home-nav-top {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;
      padding: 8px 0 6px;
    }

    .home-nav-bottom {
      width: 100%;
      border-top: 0;
      padding: 5px 0;
      position: relative;
      min-height: 52px;
    }

    .home-nav-top-title {
      margin: 0;
      font-size: 1rem;
      font-weight: 600;
      color: #fff;
      line-height: 1.2;
    }

    .home-nav .home-search {
      display: inline-flex;
      align-items: center;
      height: 27px;
      margin-top: 0;
      margin-bottom: 0;
      gap: 8px;
      border-bottom: 1px solid rgba(255, 255, 255, 0.65);
      padding: 0 0 2px;
      transition: border-bottom-color 120ms ease, border-bottom-width 120ms ease;
    }

    .home-nav .home-search:focus-within {
      border-bottom-color: rgba(255, 255, 255, 0.95);
      border-bottom-width: 2px;
    }

    .home-nav .home-search .form-control {
      margin-top: 0 !important;
      margin-bottom: 0 !important;
      align-self: center;
      height: 22px;
      min-height: 22px;
      padding-top: 0;
      padding-bottom: 0;
      font-size: 11px;
      font-weight: 400;
      letter-spacing: normal;
      line-height: 1;
      width: 220px;
      border: 0;
      border-radius: 0;
      background: transparent !important;
      color: #fff;
      box-shadow: none !important;
      padding-left: 0;
      padding-right: 0;
    }

    .home-nav .home-search .form-control::placeholder {
      color: rgba(255, 255, 255, 0.95);
      opacity: 1;
      font-size: 11px;
      font-weight: 400;
      letter-spacing: normal;
    }

    .home-nav .home-search .form-control:focus {
      border: 0;
      outline: 0;
      box-shadow: none !important;
      background: transparent !important;
      color: #fff;
      font-size: 14px;
    }

    .home-nav .home-search .form-control::-webkit-search-cancel-button {
      -webkit-appearance: searchfield-cancel-button;
      cursor: pointer;
      filter: brightness(0) invert(1) opacity(0.95);
    }

    .home-nav-menu-row {
      width: 100%;
      display: grid;
      grid-template-columns: 1fr auto 1fr;
      align-items: end;
      min-height: 22px;
      gap: 12px;
    }

    .home-nav-menu-row .navbar-nav {
      justify-self: center;
    }

    .home-nav-menu-row .home-user-meta {
      justify-self: start;
      align-self: end;
    }

    .home-nav-menu-row .home-search {
      justify-self: end;
      align-self: end;
    }

    .home-user-meta {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      font-size: 0.75rem;
      color: #a3acb9;
      white-space: nowrap;
      text-transform: none !important;
      letter-spacing: normal !important;
    }

    .home-user-meta strong {
      font-weight: 400;
      color: #b6beca;
      text-transform: none !important;
      letter-spacing: normal !important;
    }

    .home-nav .nav-link.dropdown-toggle {
      background: transparent;
      border: 0;
      text-decoration: none;
      font-size: 0.8rem;
      padding-top: 2px;
      padding-bottom: 2px;
    }

    .home-power-btn {
      width: 30px;
      height: 30px;
      border-radius: 6px;
      border: 0;
      background: transparent;
      color: #cbd5e1;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      text-decoration: none;
      transition: color 120ms ease;
    }

    .home-power-btn:hover {
      background: transparent;
      color: #fff;
    }

    .home-power-btn .material-symbols-outlined {
      font-size: 19px;
      line-height: 1;
      font-variation-settings: "FILL" 0, "wght" 400, "GRAD" 0, "opsz" 24;
    }

    .home-agenda-btn {
      width: 30px;
      height: 30px;
      border-radius: 6px;
      border: 0;
      background: transparent;
      color: #cbd5e1;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      text-decoration: none;
      transition: color 120ms ease;
    }

    .home-agenda-btn:hover {
      background: transparent;
      color: #fff;
    }

    .home-agenda-btn .material-symbols-outlined {
      font-size: 19px;
      line-height: 1;
      font-variation-settings: "FILL" 0, "wght" 400, "GRAD" 0, "opsz" 24;
    }

    .home-nav .rt-icon-btn::after {
      background: transparent !important;
      box-shadow: none !important;
      font-weight: 400 !important;
    }

    .home-nav .home-menu-item:hover > .nav-link.dropdown-toggle,
    .home-nav .home-menu-item:focus-within > .nav-link.dropdown-toggle {
      color: var(--bs-navbar-active-color);
      opacity: 1;
    }

    .home-nav .home-menu-item {
      position: relative;
      z-index: 1;
    }

    .home-nav .home-menu-item:hover,
    .home-nav .home-menu-item:focus-within {
      z-index: 3200;
    }

    .home-nav .home-menu-item::after {
      content: "";
      position: absolute;
      left: 0;
      right: 0;
      top: 100%;
      height: 0;
    }

    .home-nav .home-submenu {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      min-width: 220px;
      background: #fff;
      border: 1px solid rgba(15, 23, 42, 0.12);
      border-radius: 6px;
      padding: 6px;
      box-shadow: 0 14px 30px -18px rgba(2, 6, 23, 0.55);
      z-index: 3300;
      pointer-events: auto;
    }

    .home-nav .home-menu-item:hover > .home-submenu {
      display: block;
    }

    .home-nav .home-submenu:hover {
      display: block;
    }

    .home-nav .home-submenu .rt-arrow-hover {
      display: block;
      position: relative;
      z-index: 1;
      color: #334155;
      text-decoration: none;
      border-radius: 4px;
      padding: 9px 10px 9px 36px;
      margin: 0;
      text-transform: capitalize !important;
      font-size: 14px !important;
      font-weight: 400 !important;
      letter-spacing: normal !important;
      line-height: 1.3 !important;
    }

    .home-nav .home-submenu .rt-arrow-hover:hover {
      color: #f8fafc;
    }

    .home-nav .home-submenu .rt-arrow-hover + .rt-arrow-hover {
      margin-top: 4px;
    }

    @media (min-width: 992px) {
      .home-nav .home-menu-item:focus-within > .home-submenu {
        display: block;
      }

      .home-nav #navbarColor03 {
        display: block !important;
        width: 100%;
      }

      .home-nav #navbarColor03 .navbar-nav {
        margin: 0 !important;
        display: flex;
        align-items: center;
      }

      .home-nav #navbarColor03 .home-search {
        margin: 0;
      }
    }

    @media (max-width: 991.98px) {
      .home-nav .home-menu-item:focus-within > .home-submenu {
        display: block;
      }

      .home-nav-top {
        padding-top: 3px;
        padding-bottom: 3px;
      }

      .home-nav-bottom {
        border-top: 0;
        padding-top: 0;
        min-height: 0;
      }

      .home-nav .home-search {
        height: auto;
        margin-top: 8px;
      }

      .home-nav .home-search .form-control {
        width: 100%;
      }

      .home-nav-menu-row {
        display: flex;
        flex-direction: column;
        align-items: stretch;
        gap: 8px;
      }

      .home-nav-menu-row .navbar-nav,
      .home-nav-menu-row .home-user-meta,
      .home-nav-menu-row .home-search {
        justify-self: auto;
      }

      .home-user-meta {
        white-space: normal;
      }
    }
  </style>
  <nav class="navbar navbar-expand-lg bg-primary home-nav mb-3 w-100 rounded-0" data-bs-theme="dark">
    <div class="container-fluid">
      <div class="home-nav-top w-100">
        <h1 class="home-nav-top-title">COTIL TENTE A.Ş.</h1>
        <div class="d-flex gap-2">
          <%= link_to ajanda_path,
                      class: "rt-icon-btn home-agenda-btn",
                      aria: { label: "Ajanda" },
                      data: { tip: "Ajanda" } do %>
            <span class="material-symbols-outlined" aria-hidden="true">calendar_clock</span>
          <% end %>
          <%= link_to logout_path,
                      class: "rt-icon-btn home-power-btn",
                      aria: { label: "Kapat" },
                      data: { tip: "Kapat", turbo_method: :delete, turbo_confirm: "Oturumu kapatmak istiyor musunuz?" } do %>
            <span class="material-symbols-outlined" aria-hidden="true">power_settings_new</span>
          <% end %>
        </div>
      </div>
      <div class="home-nav-bottom">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor03">
          <div class="home-nav-menu-row">
            <div class="home-user-meta">
              <span><strong><%= current_user&.role.to_s %></strong></span>
              <span><strong><%= current_user&.name.presence || "Misafir" %></strong></span>        
            </div>
            <ul class="navbar-nav mb-2 mb-lg-0">
              <li class="nav-item">
                <%= link_to root_path, class: "nav-link active" do %>
                  Home
                  <span class="visually-hidden">(current)</span>
                <% end %>
              </li>
              <% if current_user && Roles.catalog_manage?(current_user.role) %>
                <li class="nav-item home-menu-item">
                  <button class="nav-link dropdown-toggle" type="button">MÜŞTERİLER</button>
                  <div class="home-submenu">
                    <%= link_to "Müşteri Tanımlama", new_company_path, class: "rt-arrow-hover" %>
                    <%= link_to "Müşteri Listesi", companies_path, class: "rt-arrow-hover" %>
                  </div>
                </li>
                <li class="nav-item home-menu-item">
                  <button class="nav-link dropdown-toggle" type="button">TEKLİFLER</button>
                  <div class="home-submenu">
                    <%= link_to "Yeni Teklif", new_offer_path, class: "rt-arrow-hover" %>
                    <%= link_to "Teklif Listesi", offers_path, class: "rt-arrow-hover" %>
                  </div>
                </li>
                <li class="nav-item home-menu-item">
                  <button class="nav-link dropdown-toggle" type="button">ÜRÜNLER</button>
                  <div class="home-submenu">
                    <%= link_to "Ürün Tanımla", new_product_path, class: "rt-arrow-hover" %>
                    <%= link_to "Ürün Listesi", products_path, class: "rt-arrow-hover" %>
                  </div>
                </li>
              <% end %>
              <% if current_user && Roles.finance_manage?(current_user.role) %>
                <li class="nav-item home-menu-item">
                  <button class="nav-link dropdown-toggle" type="button">KURLAR</button>
                  <div class="home-submenu">
                    <%= link_to "Kur Ekle", new_currency_path, class: "rt-arrow-hover" %>
                    <%= link_to "Kur Listesi", currencies_path, class: "rt-arrow-hover" %>
                  </div>
                </li>
              <% end %>
              <% if current_user && Roles.admin?(current_user.role) %>
                <li class="nav-item home-menu-item">
                  <button class="nav-link dropdown-toggle" type="button">AYARLAR</button>
                  <div class="home-submenu">
                    <%= link_to "Admin Panel", admin_users_path, class: "rt-arrow-hover" %>
                    <%= link_to "Activity Logs", admin_activity_logs_path, class: "rt-arrow-hover" %>
                  </div>
                </li>
              <% end %>
            </ul>
            <form class="home-search" role="search" action="<%= home_path %>" method="get">
              <input id="home-search-input" class="form-control" type="search" name="q" placeholder="Arama" aria-label="Search">
            </form>
          </div>
        </div>
      </div>
    </div>
  </nav>
  <div class="row g-3 mb-3">
    <% @kpis.first(3).each do |kpi| %>
      <div class="col-12 col-md-4">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <div class="text-secondary small text-uppercase mb-1"><%= kpi[:label] %></div>
            <div class="h4 mb-1"><%= kpi[:value] %></div>
            <div class="small text-secondary"><%= kpi[:delta] %></div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row g-3">
    <div class="col-12 col-xl-8">
      <div class="card shadow-sm mb-3 home-header-card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <span>Haftalık Akış Özeti</span>
          <span class="badge bg-warning text-dark">7 Gün</span>
        </div>
        <div class="card-body">
          <div class="row g-2">
            <% @flow_stats.each do |item| %>
              <div class="col-12 col-md-4">
                <div class="border rounded p-2 h-100 bg-light-subtle">
                  <div class="h5 mb-1"><%= item[:value] %></div>
                  <div class="small fw-semibold"><%= item[:label] %></div>
                  <div class="small text-secondary"><%= item[:note] %></div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
          <span>Son Teklifler</span>
          <%= link_to "Tum teklifler", offers_path, class: "btn btn-sm btn-secondary" %>
        </div>
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead>
              <tr>
                <th>No</th>
                <th>Müşteri</th>
                <th>Tutar</th>
                <th>Durum</th>
              </tr>
            </thead>
            <tbody>
              <% if @recent_offers.blank? %>
                <tr>
                  <td colspan="4" class="text-center py-4 text-secondary">Kayıt bulunamadı.</td>
                </tr>
              <% else %>
                <% @recent_offers.each do |offer| %>
                  <tr>
                    <td><%= offer[:number].presence || "-" %></td>
                    <td><%= offer[:company].presence || "-" %></td>
                    <td><%= offer[:amount] %></td>
                    <td><%= offer[:status].presence || "-" %></td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col-12 col-xl-4">
      <div class="card shadow-sm mb-3">
        <div class="card-header">Hızlı işlemler</div>
        <div class="list-group list-group-flush">
          <% if current_user && Roles.catalog_manage?(current_user.role) %>
            <%= link_to "Yeni Müşteri", new_company_path, class: "list-group-item list-group-item-action" %>
            <%= link_to "Yeni Teklif", new_offer_path, class: "list-group-item list-group-item-action" %>
            <%= link_to "Yeni Ürün", new_product_path, class: "list-group-item list-group-item-action" %>
          <% end %>
          <% if current_user && Roles.finance_manage?(current_user.role) %>
            <%= link_to "Kur Yönetimi", currencies_path, class: "list-group-item list-group-item-action" %>
          <% end %>
          <% if current_user && Roles.admin?(current_user.role) %>
            <%= link_to "Kullanıcı Yönetimi", admin_users_path, class: "list-group-item list-group-item-action" %>
          <% end %>
        </div>
      </div>
      <div class="card shadow-sm">
        <div class="card-header">Hatırlatmalar</div>
        <ul class="list-group list-group-flush">
          <% if @reminders.blank? %>
            <li class="list-group-item text-secondary">Bugun için not bulunmuyor.</li>
          <% else %>
            <% @reminders.each do |note| %>
              <li class="list-group-item"><%= note %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
