<div class="min-h-screen bg-[radial-gradient(circle_at_top,_var(--tw-gradient-stops))] from-slate-100 via-white to-slate-50">
  <div class="w-full px-4 pt-0 pb-4">
    <div class="w-full">
      <div class="grid grid-cols-1 gap-4 lg:grid-cols-3 items-start">
        <div class="space-y-4 lg:col-span-2">
          <section class="relative overflow-hidden rounded-3xl border border-slate-200 bg-white/80 p-4 shadow-xl shadow-slate-200/60 backdrop-blur sm:p-6 mt-0">
            <div class="mt-2 grid grid-cols-1 gap-3 md:grid-cols-3">
              <% @kpis.each do |kpi| %>
                <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm transition hover:-translate-y-0.5 hover:border-slate-300 hover:shadow-md">
                  <p class="text-xs font-semibold uppercase tracking-wide text-slate-500"><%= kpi[:label] %></p>
                  <div class="mt-1 flex items-end justify-between">
                    <span class="text-2xl font-semibold text-slate-900"><%= kpi[:value] %></span>
                    <span class="text-xs font-semibold <%= kpi[:delta_class] %>"><%= kpi[:delta] %></span>
                  </div>
                  <div class="mt-1.5 h-1.5 w-full rounded-full bg-slate-100">
                    <div class="h-1.5 rounded-full <%= kpi[:bar_class] %> <%= kpi[:bar_width] %>"></div>
                  </div>
                </div>
              <% end %>
            </div>
          </section>

          <div class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm transition hover:-translate-y-0.5 hover:border-slate-300 hover:shadow-md">
            <div class="flex items-center justify-between">
              <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Operasyon Akışı</h2>
              <span class="text-xs font-semibold text-amber-600">Son 7 gün</span>
            </div>
            <div class="mt-3 grid grid-cols-1 gap-3 md:grid-cols-3">
              <% @flow_stats.each do |item| %>
                <div class="rounded-xl border border-slate-200 p-3 transition hover:-translate-y-0.5 hover:border-slate-300 hover:shadow-sm">
                  <p class="text-xs font-semibold uppercase tracking-wide text-slate-500"><%= item[:label] %></p>
                  <p class="mt-1 text-xl font-semibold text-slate-900"><%= item[:value] %></p>
                  <p class="mt-1 text-xs text-slate-500"><%= item[:note] %></p>
                </div>
              <% end %>
            </div>
          </div>

          <div class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm transition hover:-translate-y-0.5 hover:border-slate-300 hover:shadow-md">
            <div class="flex items-center justify-between">
              <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Son Teklifler</h2>
              <%= link_to "Tümünü gör", offers_path, class: "text-sm font-semibold text-sky-700 hover:text-sky-800" %>
            </div>
            <div class="mt-4 overflow-hidden rounded-xl border border-slate-200">
              <table class="min-w-full divide-y divide-slate-200 text-sm">
                <thead class="table-head">
                  <tr>
                    <th class="table-th">Teklif No</th>
                    <th class="table-th">Müşteri</th>
                    <th class="table-th text-right">Tutar</th>
                    <th class="table-th text-right">Durum</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                  <% @recent_offers.each do |offer| %>
                    <tr class="odd:bg-slate-50 even:bg-white hover:bg-slate-100/70">
                      <td class="px-3 py-2 font-medium text-slate-900"><%= offer[:number] %></td>
                      <td class="px-3 py-2 text-slate-700"><%= offer[:company] %></td>
                      <td class="px-3 py-2 text-right text-slate-700"><%= offer[:amount] %></td>
                      <td class="px-3 py-2 text-right">
                        <span class="inline-flex rounded-full px-2.5 py-1 text-xs font-semibold <%= offer[:status_class] %>"><%= offer[:status] %></span>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <div class="space-y-4">
          <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm transition hover:-translate-y-0.5 hover:border-slate-300 hover:shadow-md">
            <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Hızlı İşlemler</h2>
            <div class="mt-3 grid grid-cols-1 gap-2">
              <%= link_to "Müşteri listesi", companies_path, class: "flex items-center justify-between rounded-xl border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-800 transition hover:-translate-y-0.5 hover:border-slate-300 hover:bg-sky-50 hover:shadow-sm" %>
              <%= link_to "Teklif oluştur", new_offer_path, class: "flex items-center justify-between rounded-xl border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-800 transition hover:-translate-y-0.5 hover:border-slate-300 hover:bg-amber-50 hover:shadow-sm" %>
              <%= link_to "Ürün kataloğu", products_path, class: "flex items-center justify-between rounded-xl border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-800 transition hover:-translate-y-0.5 hover:border-slate-300 hover:bg-emerald-50 hover:shadow-sm" %>
              <%= link_to "Kurlar", currencies_path, class: "flex items-center justify-between rounded-xl border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-800 transition hover:-translate-y-0.5 hover:border-slate-300 hover:bg-slate-50 hover:shadow-sm" %>
            </div>
          </div>

          <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm transition hover:-translate-y-0.5 hover:border-slate-300 hover:shadow-md">
            <h2 class="text-sm font-semibold uppercase tracking-wide text-slate-500">Hatırlatmalar</h2>
            <ul class="mt-3 space-y-2 text-sm text-slate-700">
              <% @reminders.each do |note| %>
                <li class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-2 transition hover:-translate-y-0.5 hover:border-slate-300 hover:shadow-sm">
                  <%= note %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>

      <footer class="mt-6 rounded-2xl border border-slate-200 bg-white/80 px-4 py-3 shadow-sm backdrop-blur">
        <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
          <div class="text-xs text-slate-500">RubyTeklif • Teklif ve müşteri yönetimi</div>
          <div class="flex flex-wrap gap-3 text-xs font-semibold text-slate-600">
            <%= link_to "Gizlilik", "#", class: "hover:text-slate-900" %>
            <%= link_to "Destek", "#", class: "hover:text-slate-900" %>
            <%= link_to "Durum", "#", class: "hover:text-slate-900" %>
          </div>
        </div>
      </footer>
    </div>
  </div>
</div>
