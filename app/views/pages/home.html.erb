<div class="rt-dashboard">
  <header class="rt-topbar">
    <div class="rt-topbar-utility">
      <div class="rt-shell">
        <div class="rt-brand">
          <span class="rt-brand-badge">A</span>
          <div>
            <div class="rt-brand-title">COTIL TENTE</div>
            <div class="rt-brand-subtitle">Dashboard</div>
          </div>
        </div>

        <div class="rt-search-wrap">
          <input type="search" placeholder="Search..." aria-label="Search" />
        </div>

        <div class="rt-icon-group">
          <button type="button" class="rt-icon-btn" aria-label="Gecici Arac 1" data-tip="Gecici Arac 1">
            <span class="material-symbols-outlined" aria-hidden="true">apps</span>
          </button>
          <button type="button" class="rt-icon-btn" aria-label="Zoom" data-tip="Zoom">
            <span class="material-symbols-outlined" aria-hidden="true">fullscreen</span>
          </button>
          <button type="button" class="rt-icon-btn" aria-label="Gecici Arac 3" data-tip="Gecici Arac 3">
            <span class="material-symbols-outlined" aria-hidden="true">sort</span>
          </button>
          <button type="button" class="rt-icon-btn" aria-label="Gecici Arac 4" data-tip="Gecici Arac 4">
            <span class="material-symbols-outlined" aria-hidden="true">settings</span>
          </button>
          <button type="button" class="rt-icon-btn" aria-label="Kapatma" data-tip="Kapatma">
            <span class="material-symbols-outlined" aria-hidden="true">power_settings_new</span>
          </button>
        </div>
      </div>
    </div>

    <div class="rt-topbar-menu">
      <div class="rt-shell">
        <nav class="rt-menu" aria-label="Primary">
          <%= link_to "Dashboard", root_path, class: "is-active" %>

          <% if current_user && Roles.catalog_manage?(current_user.role) %>
            <div class="rt-menu-item">
              <button type="button">Müşteriler</button>
              <div class="rt-submenu">
                
                <%= link_to "Musteri tanimla", new_company_path %>
                <%= link_to "Musteri listesi", companies_path %>
              </div>
            </div>

            <div class="rt-menu-item">
              <button type="button">Teklifler</button>
              <div class="rt-submenu">
                
                <%= link_to "Yeni teklif", new_offer_path %>
                <%= link_to "Teklif listesi", offers_path %>
              </div>
            </div>

            <div class="rt-menu-item">
              <button type="button">Urunler</button>
              <div class="rt-submenu">
                
                <%= link_to "Urun tanimla", new_product_path %>
                <%= link_to "Urun listesi", products_path %>
              </div>
            </div>
          <% end %>

          <% if current_user && Roles.finance_manage?(current_user.role) %>
            <div class="rt-menu-item">
              <button type="button">Kurlar</button>
              <div class="rt-submenu">
               
                <%= link_to "Kur ekle", new_currency_path %>
                <%= link_to "Kur listesi", currencies_path %>
              </div>
            </div>
          <% end %>

          <% if current_user && Roles.admin?(current_user.role) %>
            <div class="rt-menu-item">
              <button type="button">Ayarlar</button>
              <div class="rt-submenu">
               
                <%= link_to "Admin Panel", admin_users_path %>
                <%= link_to "Activity Logs", admin_activity_logs_path %>
              </div>
            </div>
          <% end %>
        </nav>
      </div>
    </div>
  </header>

  <div class="rt-shell rt-content">
    <section class="rt-kpi-grid">
      <% @kpis.first(3).each_with_index do |kpi, index| %>
        <% icon_name = case index
                      when 0 then "account_balance"
                      when 1 then "assignment"
                      else "shopping_basket"
                      end %>
        <% icon_color_class = case index
                             when 0 then "col-amber"
                             when 1 then "col-blue"
                             else "col-slate"
                             end %>
        <article class="rt-kpi-card rt-kpi-card-classic text-center">
          <div class="rt-kpi-body">
            <p class="rt-kpi-icon-wrap">
              <span class="material-symbols-outlined rt-kpi-icon <%= icon_color_class %>"><%= icon_name %></span>
            </p>
            <span class="rt-kpi-classic-label"><%= kpi[:label] %></span>
            <h3 class="rt-kpi-classic-value"><%= kpi[:value] %></h3>
            <small class="rt-kpi-classic-note"><%= kpi[:delta] %></small>
          </div>
        </article>
      <% end %>
    </section>

    <section class="rt-main-grid">
      <div class="rt-stack">
        <section class="rt-card">
          <header class="rt-card-header">
            <div>
              <p class="rt-eyebrow">Performance</p>
              <h3>Haftalik Akis Ozeti</h3>
            </div>
            <span class="rt-chip">7 gun</span>
          </header>

          <div class="rt-flow-grid">
            <% @flow_stats.each do |item| %>
              <% amount = item[:value].to_i %>
              <% bar_height = [[(amount * 6), 24].max, 120].min %>
              <div class="rt-flow-item">
                <div class="rt-flow-bar-wrap">
                  <div class="rt-flow-bar" style="height: <%= bar_height %>px;"></div>
                </div>
                <p class="rt-flow-value"><%= item[:value] %></p>
                <p class="rt-flow-label"><%= item[:label] %></p>
                <p class="rt-flow-note"><%= item[:note] %></p>
              </div>
            <% end %>
          </div>
        </section>

        <section class="rt-card">
          <header class="rt-card-header">
            <div>
              <p class="rt-eyebrow">Pipeline</p>
              <h3>Son Teklifler</h3>
            </div>
            <%= link_to "Tum Teklifler", offers_path, class: "rt-link" %>
          </header>

          <div class="rt-table-wrap">
            <table class="rt-table">
              <thead>
                <tr>
                  <th>No</th>
                  <th>Musteri</th>
                  <th>Tutar</th>
                  <th>Durum</th>
                </tr>
              </thead>
              <tbody>
                <% if @recent_offers.blank? %>
                  <tr>
                    <td colspan="4" class="rt-empty">Kayit bulunamadi.</td>
                  </tr>
                <% else %>
                  <% @recent_offers.each do |offer| %>
                    <tr>
                      <td><%= offer[:number].presence || "-" %></td>
                      <td><%= offer[:company].presence || "-" %></td>
                      <td><%= offer[:amount] %></td>
                      <td><span class="rt-status"><%= offer[:status] %></span></td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        </section>
      </div>

      <aside class="rt-stack">
        <section class="rt-card">
          <header class="rt-card-header">
            <div>
              <p class="rt-eyebrow">Shortcuts</p>
              <h3>Hizli Islemler</h3>
            </div>
          </header>
          <div class="rt-actions">
            <% if current_user && Roles.catalog_manage?(current_user.role) %>
              <%= link_to "Yeni Musteri", new_company_path %>
              <%= link_to "Yeni Teklif", new_offer_path %>
              <%= link_to "Yeni Urun", new_product_path %>
            <% end %>
            <% if current_user && Roles.finance_manage?(current_user.role) %>
              <%= link_to "Kur Yonetimi", currencies_path %>
            <% end %>
            <% if current_user && Roles.admin?(current_user.role) %>
              <%= link_to "Kullanici Yonetimi", admin_users_path %>
            <% end %>
          </div>
        </section>

        <section class="rt-card">
          <header class="rt-card-header">
            <div>
              <p class="rt-eyebrow">Team Notes</p>
              <h3>Hatirlatmalar</h3>
            </div>
          </header>
          <ul class="rt-reminders">
            <% if @reminders.blank? %>
              <li>Bugun icin not bulunmuyor.</li>
            <% else %>
              <% @reminders.each do |note| %>
                <li><%= note %></li>
              <% end %>
            <% end %>
          </ul>
        </section>
      </aside>
    </section>
  </div>
</div>
