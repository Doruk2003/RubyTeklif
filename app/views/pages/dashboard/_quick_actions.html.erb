<section class="alp-card">
  <header class="alp-card-header">
    <div>
      <p class="alp-eyebrow">Shortcuts</p>
      <h3>Hizli Islemler</h3>
    </div>
  </header>

  <div class="alp-actions">
    <% if current_user && Roles.catalog_manage?(current_user.role) %>
      <%= link_to "Yeni Musteri", new_company_path %>
      <%= link_to "Yeni Teklif", "#", data: { bs_toggle: "modal", bs_target: "#offerTypeModal", offer_flow: "type_only" } %>
      <%= link_to "Yeni Urun", new_product_path %>
    <% end %>
    <% if current_user && Roles.finance_manage?(current_user.role) %>
      <%= link_to "Kur Yonetimi", currencies_path %>
    <% end %>
    <% if current_user && Roles.admin?(current_user.role) %>
      <%= link_to "Kullanici Yonetimi", admin_users_path %>
    <% end %>
  </div>
</section>
