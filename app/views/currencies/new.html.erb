<div class="min-h-screen bg-[#f6f3ee] px-4 pb-3 pt-0">
  <div class="w-full space-y-2">
    <div class="mt-[-2rem] rounded-2xl bg-slate-50/90 p-5 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.25)]">
      <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-2xl font-semibold tracking-tight text-slate-900">Yeni Kur</h1>
          <p class="text-sm text-slate-500">Kullanilacak dovizleri tanimlayin.</p>
        </div>
        <div class="flex w-full flex-col gap-2 sm:w-auto sm:flex-row sm:items-center">
          <%= link_to "Kur Listesi", currencies_path, class: "btn-secondary w-full sm:w-auto" %>
          <%= home_nav_button(home_path) %>
        </div>
      </div>
    </div>

    <div class="rounded-2xl bg-slate-50/90 p-5 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.2545)]">
      <div class="rounded-2xl bg-white p-6 shadow-sm">
        <%= form_with url: currencies_path, scope: :currency, local: true, class: "grid grid-cols-1 gap-5 md:grid-cols-2" do |f| %>
          <div>
            <%= f.label :code, "Kod", class: "block text-xs font-semibold uppercase tracking-wide text-slate-800/70" %>
            <%= f.text_field :code, value: @currency[:code], placeholder: "USD", class: "form-input" %>
          </div>

          <div>
            <%= f.label :name, "Ad", class: "block text-xs font-semibold uppercase tracking-wide text-slate-800/70" %>
            <%= f.text_field :name, value: @currency[:name], placeholder: "US Dollar", class: "form-input" %>
          </div>

          <div>
            <%= f.label :symbol, "Sembol", class: "block text-xs font-semibold uppercase tracking-wide text-slate-800/70" %>
            <%= f.text_field :symbol, value: @currency[:symbol], placeholder: "$", class: "form-input" %>
          </div>

          <div>
            <%= f.label :rate_to_try, "Kur (1 Doviz = TL)", class: "block text-xs font-semibold uppercase tracking-wide text-slate-800/70" %>
            <%= f.number_field :rate_to_try, value: @currency[:rate_to_try], step: "0.0001", class: "form-input" %>
          </div>

          <div class="flex items-center gap-3">
            <%= f.check_box :active, { checked: @currency.key?(:active) ? @currency[:active] : true, class: "h-4 w-4 rounded border-slate-300" }, "1", "0" %>
            <%= f.label :active, "Aktif", class: "text-sm text-slate-700" %>
          </div>

          <div class="md:col-span-2">
            <%= f.submit "Kaydet", class: "btn-primary w-full", data: { turbo_confirm: "Yeni kur kaydedilsin mi?" } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



