<div class="container-fluid py-2">
  <div class="row g-2">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body d-flex flex-column flex-sm-row align-items-sm-center justify-content-between gap-3">
          <div>
            <h1 class="h4 mb-1">Kur Düzenle</h1>
            <p class="text-secondary mb-0">Kur bilgisini güncelleyin.</p>
          </div>
          <div class="d-flex flex-column flex-sm-row align-items-stretch align-items-sm-center gap-2 w-100">
            <%= link_to "Kur Listesi", currencies_path, class: "btn-secondary w-100" %>
            <%= home_nav_button(home_path) %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body">
          <% if @currency.present? %>
            <%= form_with url: currency_path(@currency["id"]), method: :patch, scope: :currency, local: true, class: "row g-2" do |f| %>
              <div class="col-12 col-md-6">
                <%= f.label :code, "Kod", class: "form-label text-uppercase small fw-semibold text-secondary mb-1" %>
                <%= f.text_field :code, value: @currency["code"], placeholder: "USD", class: "form-input" %>
              </div>

              <div class="col-12 col-md-6">
                <%= f.label :name, "Ad", class: "form-label text-uppercase small fw-semibold text-secondary mb-1" %>
                <%= f.text_field :name, value: @currency["name"], placeholder: "US Dollar", class: "form-input" %>
              </div>

              <div class="col-12 col-md-6">
                <%= f.label :symbol, "Sembol", class: "form-label text-uppercase small fw-semibold text-secondary mb-1" %>
                <%= f.text_field :symbol, value: @currency["symbol"], placeholder: "$", class: "form-input" %>
              </div>

              <div class="col-12 col-md-6">
                <%= f.label :rate_to_try, "Kur (1 Döviz = TL)", class: "form-label text-uppercase small fw-semibold text-secondary mb-1" %>
                <%= f.number_field :rate_to_try, value: @currency["rate_to_try"], step: "0.0001", class: "form-input" %>
              </div>

              <div class="col-12">
                <div class="form-check">
                  <%= f.check_box :active, { checked: @currency.key?("active") ? @currency["active"] : true, class: "form-check-input" }, "1", "0" %>
                  <%= f.label :active, "Aktif", class: "form-check-label" %>
                </div>
              </div>

              <div class="col-12">
                <%= f.submit "Güncelle", class: "btn-primary w-100", data: { turbo_confirm: "Kur güncellensin mi?" } %>
              </div>
            <% end %>
          <% else %>
            <div class="alert alert-secondary mb-0">Kur bulunamadı.</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


