<div class="min-h-screen bg-[#f6f3ee] px-4 pb-3 pt-0">
  <div class="w-full space-y-2">
    <div class="mt-1 rounded-2xl bg-slate-50/90 p-5 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.45)]">
      <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-2xl font-semibold tracking-tight text-slate-900">Döviz Kurları</h1>
          <p class="text-sm text-slate-500">Toplam <span class="font-semibold text-slate-800"><%= @currencies.size %></span> kur</p>
        </div>

        <div class="flex w-full flex-col gap-2 sm:w-auto sm:flex-row sm:items-center">
          <%= link_to "Yeni Kur", new_currency_path, class: "btn-primary w-full sm:w-auto" %>
          <%= link_to "Ana Sayfa", home_path, class: "btn-secondary w-full sm:w-auto" %>
        </div>
      </div>
    </div>

    <div class="rounded-2xl bg-slate-50/90 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.45)]">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-200 text-sm">
          <thead>
            <tr>
              <th>Kod</th>
              <th>Ad</th>
              <th>Sembol</th>
              <th class="text-right">1 Döviz = TL</th>
              <th class="text-center">Aktif</th>
              <th class="text-right">Aksiyon</th>
            </tr>
          </thead>

          <tbody class="divide-y divide-slate-200 bg-white">
            <% @currencies.each do |currency| %>
              <tr class="odd:bg-slate-50 even:bg-white hover:bg-slate-100/70">
                <td class="font-medium text-slate-900"><%= currency["code"].to_s %></td>
                <td><%= currency["name"].to_s %></td>
                <td><%= currency["symbol"].to_s %></td>
                <td class="text-right"><%= number_to_currency(currency["rate_to_try"], unit: "TL ", format: "%u%n") %></td>
                <td class="text-center">
                  <% if currency["active"] %>
                    <span class="badge-success">Aktif</span>
                  <% else %>
                    <span class="badge-info">Pasif</span>
                  <% end %>
                </td>
                <td class="text-right">
                  <div class="inline-flex items-center gap-2">
                    <%= link_to edit_currency_path(currency["id"]),
                          title: "Düzenle",
                          aria: { label: "Düzenle" },
                          class: "inline-flex h-9 w-9 items-center justify-center rounded-xl bg-transparent text-amber-600" do %>
                      <svg viewBox="0 0 24 24" class="h-5 w-5 text-amber-600" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M4 20h5l9-9-5-5-9 9v5z"/>
                        <path d="M14 6l4 4"/>
                      </svg>
                    <% end %>

                    <%= link_to currency_path(currency["id"]),
                          method: :delete,
                          data: { confirm: "Bu kuru arşivlemek istediğinize emin misiniz?" },
                          title: "Arşivle",
                          aria: { label: "Arşivle" },
                          class: "inline-flex h-9 w-9 items-center justify-center rounded-xl bg-transparent text-rose-600" do %>
                      <svg viewBox="0 0 24 24" class="h-5 w-5 text-rose-600" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M5 7h14"/>
                        <path d="M10 5h4"/>
                        <path d="M8 7l1 12h6l1-12"/>
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>

            <% if @currencies.empty? %>
              <tr>
                <td colspan="6" class="py-12 text-center">
                  <div class="mx-auto max-w-sm">
                    <div class="mb-2 text-sm font-semibold text-slate-700">Henüz kur tanımlanmadı</div>
                    <div class="text-sm text-slate-500">İlk kuru eklemek için sağ üstteki butonu kullanın.</div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="rounded-2xl bg-slate-50/90 px-4 py-3 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.45)]">
      <div class="flex items-center justify-between gap-3 text-sm">
        <div class="text-slate-600">
          Sayfa <span class="font-semibold text-slate-800"><%= @page %></span>
          <span class="text-slate-400">/</span>
          <span><%= @per_page %> kayıt</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="hidden sm:flex items-center gap-1 text-xs">
            <span class="text-slate-500">Sayfa boyutu:</span>
            <% [25, 50, 100].each do |size| %>
              <% active = @per_page == size %>
              <%= link_to size.to_s, currencies_path(request.query_parameters.merge(page: 1, per_page: size)),
                    class: "rounded-md px-2 py-1 #{active ? 'bg-slate-800 text-white' : 'bg-white text-slate-700 border border-slate-200'}" %>
            <% end %>
          </div>
          <% if @has_prev %>
            <%= link_to "Önceki", currencies_path(request.query_parameters.merge(page: @page - 1, per_page: @per_page)), class: "btn-secondary" %>
          <% else %>
            <span class="btn-secondary opacity-50 pointer-events-none">Önceki</span>
          <% end %>

          <% if @has_next %>
            <%= link_to "Sonraki", currencies_path(request.query_parameters.merge(page: @page + 1, per_page: @per_page)), class: "btn-secondary" %>
          <% else %>
            <span class="btn-secondary opacity-50 pointer-events-none">Sonraki</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



