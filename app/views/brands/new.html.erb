<div class="container-fluid py-2">
  <div class="row g-2">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body d-flex flex-column flex-sm-row align-items-sm-center justify-content-between gap-3">
          <div>
            <h1 class="h4 mb-1">Yeni Marka</h1>
            <p class="text-secondary mb-0">Ürünler için yeni marka tanımlayın.</p>
          </div>
          <div class="d-flex flex-column flex-sm-row align-items-stretch align-items-sm-center gap-2 w-100">
            <% return_path = params[:return_to].to_s.start_with?("/") ? params[:return_to].to_s : products_path %>
            <%= list_nav_button(return_path, label: "Ürün Formuna Dön") %>
            <%= home_nav_button(home_path) %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body">
          <%= render "form",
                brand: @brand || {},
                form_url: brands_path,
                form_method: :post,
                submit_label: "Markayı Kaydet" %>
        </div>
      </div>
    </div>
  </div>
</div>


