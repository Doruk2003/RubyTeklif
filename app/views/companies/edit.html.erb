<div class="min-h-screen bg-[#f6f3ee] px-4 pb-3 pt-0">
  <div class="w-full space-y-2">
    <div class="mt-0 rounded-2xl bg-slate-50/90 p-5 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.45)]">
      <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-2xl font-semibold tracking-tight text-slate-900">Müşteriyi Düzenle</h1>
          <p class="text-sm text-slate-500">Firma bilgilerini güncelle.</p>
        </div>
        <div class="flex w-full flex-col gap-2 sm:w-auto sm:flex-row sm:items-center">
          <%= link_to "Görüntüle", company_path(@company), class: "btn-primary w-full sm:w-auto" %>
          <%= link_to "Sil", company_path(@company), method: :delete, data: { confirm: "Bu müşteriyi silmek istediğinize emin misiniz?" }, class: "btn-danger w-full sm:w-auto" %>
          <%= link_to "Listeye Dön", companies_path, class: "btn-secondary w-full sm:w-auto" %>
          <%= link_to "Ana Sayfa", home_path, class: "btn-secondary w-full sm:w-auto" %>
        </div>
      </div>
    </div>

    <div class="rounded-2xl bg-slate-50/90 p-5 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.45)]">
      <%= render "form", company: @company %>
    </div>
  </div>
</div>




