<div class="container-fluid py-2">
  <div class="row g-3">
    <div class="col-12" style="z-index: 10; position: relative;">
      <div class="card shadow-sm">
        <div class="card-body d-flex flex-column flex-sm-row align-items-sm-center justify-content-between gap-3">
          <div>
            <h1 class="h4 mb-1">Müşteriyi Düzenle</h1>
            <p class="text-secondary mb-0">Firma bilgilerini güncelle.</p>
          </div>
          <div class="d-flex flex-wrap align-items-center gap-2 justify-content-end">
            <%= icon_link_button(company_path(@company), label: "Görüntüle", icon: "visibility") %>
            <%= list_nav_button(companies_path) %>
            <%= icon_link_button(company_path(@company),
                  label: "Arşivle",
                  icon: "archive",
                  data: {
                    turbo_method: :delete,
                    turbo_confirm: "Bu müşteriyi arşivlemek istediğinize emin misiniz?"
                  }) %>
            <%= home_nav_button(home_path) %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body">
          <%= render "form", company: @company %>
        </div>
      </div>
    </div>
  </div>
</div>


