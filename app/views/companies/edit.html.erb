<div class="row g-3">
  <div class="col-12" style="z-index: 10; position: relative;">
    <div class="card shadow-sm app-header-card">
      <div class="card-body d-flex flex-column flex-sm-row align-items-sm-center justify-content-between gap-3">
        <div>
          <h1 class="h4 mb-1">Müşteriyi Düzenle</h1>
          <p class="text-secondary mb-0">Firma bilgilerini güncelle.</p>
        </div>
        <div class="d-flex flex-wrap align-items-center gap-2 justify-content-end app-header-actions">
          <%= icon_link_button(company_path(@company), label: "Görüntüle", icon: "visibility", class_name: "app-header-icon-btn") %>
          <%= list_nav_button(companies_path, class_name: "app-header-icon-btn") %>
          <%= icon_link_button(company_path(@company),
                label: "Arşivle",
                icon: "archive",
                class_name: "app-header-icon-btn",
                data: {
                  turbo_method: :delete,
                  turbo_confirm: "Bu müşteriyi arşivlemek istediğinize emin misiniz?"
                }) %>
          <%= home_nav_button(home_path, class_name: "app-header-icon-btn", icon: "home") %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-12">
    <div class="card shadow-sm">
      <div class="card-body">
        <%= render "form", company: @company %>
      </div>
    </div>
  </div>
</div>

