<div class="min-h-screen bg-gradient-to-b from-slate-50 to-white px-4 py-3">
  <div class="w-full space-y-4">
    <div class="mt-1.5 rounded-2xl bg-slate-50/90 p-5 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.45)]">
      <div class="flex flex-col gap-3 sm:flex-row sm:items-start sm:justify-between">
        <div>
          <h1 class="text-2xl font-semibold tracking-tight text-slate-900"><%= @company.name %></h1>
          <p class="text-sm text-slate-500">Müşteri Detayı</p>
        </div>

        <div class="flex w-full flex-col gap-2 sm:w-auto sm:flex-row sm:items-center">
          <%= link_to "Düzenle", edit_company_path(@company), class: "btn-primary w-full sm:w-auto" %>
          <%= link_to "Sil", company_path(@company), method: :delete, data: { confirm: "Bu müşteriyi silmek istediğinize emin misiniz?" }, class: "btn-danger w-full sm:w-auto" %>
          <%= link_to "Listeye Dön", companies_path, class: "btn-secondary w-full sm:w-auto" %>
          <%= link_to "Ana Sayfa", home_path, class: "btn-secondary w-full sm:w-auto" %>
        </div>
      </div>

      <div class="mt-5 rounded-2xl bg-white shadow-sm">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-slate-200 text-sm">
            <thead>
              <tr>
                <th>Yetkili Kişi</th>
                <th>Telefon</th>
                <th>Mail</th>
                <th>Vergi No</th>
                <th>Vergi Dairesi</th>
                <th>Durum</th>
                <th>Adres</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-200 bg-white">
              <tr class="odd:bg-slate-50 even:bg-white hover:bg-slate-100/70">
                <td><%= @company.authorized_person.presence || "-" %></td>
                <td><%= @company.phone.presence || "-" %></td>
                <td><%= @company.email.presence || "-" %></td>
                <td><%= @company.tax_number %></td>
                <td><%= @company.tax_office.presence || "-" %></td>
                <td><%= @company.active ? "Aktif" : "Pasif" %></td>
                <td class="whitespace-pre-line"><%= @company.address.presence || "-" %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="rounded-2xl bg-slate-50/90 p-5 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.45)]">
      <div class="rounded-2xl bg-white shadow-sm">
        <div class="flex items-center justify-between border-b border-slate-200 px-5 py-4">
          <h2 class="text-xs font-semibold uppercase tracking-wide text-slate-500">Bu firmaya ait teklifler</h2>
        </div>

        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-slate-200 text-sm">
            <thead>
              <tr>
                <th>Teklif No</th>
                <th>Tarih</th>
                <th class="text-right">Net</th>
                <th class="text-right">Toplam</th>
                <th class="text-right">Aksiyon</th>
              </tr>
            </thead>

            <tbody class="divide-y divide-slate-200 bg-white">
              <% @offers.each do |offer| %>
                <tr class="odd:bg-slate-50 even:bg-white hover:bg-slate-100/70">
                  <td class="font-medium text-slate-900"><%= offer.offer_number %></td>
                  <td><%= offer.offer_date %></td>
                  <td class="text-right"><%= offer.net_total %></td>
                  <td class="text-right"><%= offer.gross_total %></td>
                  <td class="text-right">
                    <%= link_to "Gör", offer_path(offer), class: "text-sky-700" %>
                  </td>
                </tr>
              <% end %>

              <% if @offers.empty? %>
                <tr class="odd:bg-slate-50 even:bg-white hover:bg-slate-100/70">
                  <td colspan="5" class="py-10 text-center">
                    <div class="mx-auto max-w-sm">
                      <div class="mb-2 text-sm font-semibold text-slate-700">Bu firmaya ait teklif yok</div>
                      <div class="text-sm text-slate-500">Yeni teklif oluşturarak başlayabilirsiniz.</div>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="mt-4">
        <%= link_to "Yeni Teklif", new_offer_path(company_id: @company.id), class: "btn-primary w-full" %>
      </div>
    </div>
  </div>
</div>


