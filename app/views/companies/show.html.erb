<div class="row g-3">
  <div class="col-12" style="z-index: 10; position: relative;">
    <div class="card shadow-sm app-header-card">
      <div class="card-body d-flex flex-column flex-sm-row align-items-sm-center justify-content-between gap-3">
        <div>
          <h1 class="h4 mb-1 text-white"><%= @company.name %></h1>
          <p class="text-secondary mb-0">Müşteri Detayı</p>
        </div>

        <div class="d-flex flex-wrap align-items-center gap-2 app-header-actions">
          <%= edit_record_button(edit_company_path(@company), class_name: "app-header-icon-btn") %>
          <%= new_record_button("Yeni Teklif", new_offer_path(company_id: @company.id), class_name: "app-header-icon-btn") %>
          <%= list_nav_button(companies_path, class_name: "app-header-icon-btn") %>
          <%= home_nav_button(home_path, class_name: "app-header-icon-btn", icon: "home") %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-12">
    <div class="card shadow-sm">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0 rt-table">
            <thead>
              <tr>
                <th>Yetkili Kişi</th>
                <th>Telefon</th>
                <th>Mail</th>
                <th>Vergi No</th>
                <th>Vergi Dairesi</th>
                <th>Durum</th>
                <th>Adres</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= @company.authorized_person.presence || "-" %></td>
                <td><%= @company.phone.presence || "-" %></td>
                <td><%= @company.email.presence || "-" %></td>
                <td><%= @company.tax_number %></td>
                <td><%= @company.tax_office.presence || "-" %></td>
                <td><%= @company.active ? "Aktif" : "Pasif" %></td>
                <td class="text-wrap"><%= @company.address.presence || "-" %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <div class="col-12">
    <div class="card shadow-sm">
      <div class="card-body p-0">
        <div class="d-flex align-items-center justify-content-between px-4 py-3 border-bottom">
          <h2 class="h6 text-uppercase text-secondary mb-0">Bu firmaya ait teklifler</h2>
        </div>

        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0 rt-table">
            <thead>
              <tr>
                <th>Teklif No</th>
                <th>Tarih</th>
                <th class="text-end">Net</th>
                <th class="text-end">Toplam</th>
                <th class="text-end">Aksiyon</th>
              </tr>
            </thead>

            <tbody>
              <% @offers.each do |offer| %>
                <tr>
                  <td class="fw-semibold"><%= offer.offer_number %></td>
                  <td><%= offer.offer_date %></td>
                  <td class="text-end"><%= offer.net_total %></td>
                  <td class="text-end"><%= offer.gross_total %></td>
                  <td class="text-end"><%= link_to "Gör", offer_path(offer), class: "text-decoration-none" %></td>
                </tr>
              <% end %>

              <% if @offers.empty? %>
                <tr>
                  <td colspan="5" class="text-center py-5">
                    <div class="mx-auto" style="max-width: 420px;">
                      <div class="fw-semibold mb-1">Bu firmaya ait teklif yok</div>
                      <div class="text-secondary">Yeni teklif oluşturarak başlayabilirsiniz.</div>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="card-footer bg-transparent border-0 pt-0">
        <%= link_to "Arşivle",
              company_path(@company),
              data: {
                turbo_method: :delete,
                turbo_confirm: "Bu müşteriyi arşivlemek istedişinize emin misiniz?"
              },
              class: "btn-danger w-100 text-center" %>
      </div>
    </div>
  </div>
</div>


