<div class="min-h-screen bg-[#f6f3ee] px-4 pb-3 pt-0">
  <div class="w-full space-y-2">
    <!-- Card 1: Header + Filters -->
    <div class="mt-0 rounded-2xl bg-slate-50/90 p-5 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.45)]">
      <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-2xl font-semibold tracking-tight text-slate-900">Müşteriler</h1>
          <p class="text-sm text-slate-500">Toplam <span class="font-semibold text-slate-800"><%= @companies.size %></span> müşteri</p>
        </div>

        <div class="flex w-full flex-col gap-2 sm:w-auto sm:flex-row sm:items-center">
          <%= link_to "Yeni Müşteri", new_company_path, class: "btn-primary w-full sm:w-auto" %>
          <%= link_to "Ana Sayfa", home_path, class: "btn-secondary w-full sm:w-auto" %>
        </div>
      </div>

      <% active_filters = request.query_parameters.slice("q", "tax_number", "has_offers", "active").reject { |_, v| v.blank? } %>
      <% if active_filters.any? %>
        <div class="mt-4 flex flex-wrap items-center gap-2 text-xs">
          <div class="font-semibold text-slate-500">Aktif filtreler:</div>
          <% active_filters.each do |key, value| %>
            <% label = case key
                      when "q" then "Ara"
                      when "tax_number" then "VKN"
                      when "has_offers" then "Teklif"
                      when "active" then "Durum"
                      end %>
            <% display = case key
                        when "has_offers" then value.to_s == "1" ? "Var" : "Yok"
                        when "active" then value.to_s == "1" ? "Aktif" : "Pasif"
                        else value
                        end %>
            <%= link_to companies_path(request.query_parameters.except(key)),
                  class: "inline-flex items-center gap-2 rounded-full border border-slate-200 bg-white px-3 py-1 text-slate-700 hover:border-slate-300" do %>
              <span class="font-semibold text-slate-600"><%= label %>:</span>
              <span><%= display %></span>
              <span class="text-slate-400">×</span>
            <% end %>
          <% end %>
          <%= link_to "Tümünü temizle", companies_path, class: "ml-1 text-slate-500 hover:text-slate-700" %>
        </div>
      <% end %>

      <div class="mt-5">
        <%= form_with url: companies_path, method: :get, local: true, class: "grid grid-cols-1 gap-4 md:grid-cols-8" do |f| %>
          <div class="md:col-span-3">
            <%= f.label :q, "Firma Adı / Yetkili", class: "block text-xs font-semibold uppercase tracking-wide text-slate-800/70" %>
            <%= f.search_field :q,
                  value: params[:q],
                  placeholder: "Örn: Acme, Ahmet",
                  class: "form-input" %>
          </div>

          <div>
            <%= f.label :tax_number, "Vergi No", class: "block text-xs font-semibold uppercase tracking-wide text-slate-800/70" %>
            <%= f.text_field :tax_number,
                  value: params[:tax_number],
                  placeholder: "VKN",
                  class: "form-input" %>
          </div>

          <div>
            <%= f.label :has_offers, "Teklif Durumu", class: "block text-xs font-semibold uppercase tracking-wide text-slate-800/70" %>
            <%= f.select :has_offers,
                  options_for_select([
                    ["Tümü", ""],
                    ["Teklif Var", "1"],
                    ["Teklif Yok", "0"]
                  ], params[:has_offers]),
                  {},
                  class: "form-input" %>
          </div>

          <div>
            <%= f.label :active, "Durum", class: "block text-xs font-semibold uppercase tracking-wide text-slate-800/70" %>
            <%= f.select :active,
                  options_for_select([
                    ["Tumu", ""],
                    ["Aktif", "1"],
                    ["Pasif", "0"]
                  ], params[:active]),
                  {},
                  class: "form-input" %>
          </div>

          <div class="flex flex-col items-stretch gap-2 sm:flex-row sm:items-end md:col-span-2">
            <%= f.submit "Filtrele", class: "btn-primary w-full rounded-md" %>
            <%= link_to "Temizle", companies_path, class: "btn-secondary w-full rounded-md" %>
          </div>
          <div class="md:col-span-8">
            <span class="text-xs text-slate-400">İpucu: Filtreler URL ile paylaşılabilir.</span>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Card 2: List -->
    <div class="mt-5 rounded-2xl bg-slate-50/90 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.45)]">
      <% current_sort = params[:sort].to_s %>
      <% current_dir = params[:dir].to_s == "asc" ? "asc" : "desc" %>
      <div class="md:hidden divide-y divide-slate-200">
        <% @companies.each do |company| %>
          <div class="bg-white px-4 py-4">
            <div class="flex items-start justify-between gap-3">
              <div>
                <div class="text-sm font-semibold text-slate-900"><%= company.name %></div>
                <div class="mt-1 text-xs text-slate-500">
                  Yetkili: <%= company.authorized_person.presence || "-" %>
                </div>
              </div>
              <div class="flex items-center gap-2">
                <% if company.active %>
                  <span class="status-circle status-circle-success" title="Aktif" aria-label="Aktif">A</span>
                <% else %>
                  <span class="status-circle status-circle-warn" title="Pasif" aria-label="Pasif">P</span>
                <% end %>
              </div>
            </div>

            <div class="mt-3 grid grid-cols-1 gap-2 text-sm text-slate-700">
              <div>Telefon: <%= company.phone.present? ? link_to(format_phone(company.phone), "tel:#{phone_digits(company.phone)}", class: "text-slate-700 hover:text-slate-900") : "-" %></div>
              <div>E-posta: <%= company.email.present? ? link_to(company.email, "mailto:#{company.email}", class: "text-slate-700 hover:text-slate-900") : "-" %></div>
              <div>VKN: <%= format_tax_number(company.tax_number) %></div>
              <div>Vergi Dairesi: <%= company.tax_office.presence || "-" %></div>
            </div>

            <div class="mt-3 flex items-center justify-between">
              <div class="text-xs text-slate-500">Teklif</div>
              <span class="badge-info"><%= company.offers_count || 0 %></span>
            </div>

            <div class="mt-2 flex items-center justify-between">
              <div class="text-xs text-slate-500">Onay</div>
              <span class="badge-approve">0</span>
            </div>

            <div class="mt-3 flex items-center gap-2">
              <%= link_to "Gör", company_path(company), class: "btn-secondary w-full text-center" %>
              <%= link_to "Düzenle", edit_company_path(company), class: "btn-secondary w-full text-center" %>
              <%= link_to "Sil",
                    company_path(company),
                    method: :delete,
                    data: { confirm: "Bu müşteriyi silmek istediğinize emin misiniz?" },
                    class: "btn-secondary w-full text-center" %>
            </div>
          </div>
        <% end %>

        <% if @companies.empty? %>
          <div class="px-5 py-12 text-center">
            <div class="mx-auto max-w-sm">
              <div class="mb-2 text-sm font-semibold text-slate-700">Henüz kayıtlı müşteri yok</div>
              <div class="text-sm text-slate-500">İlk müşterinizi eklemek için sağ üstteki butonu kullanın.</div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="hidden overflow-x-auto md:block">
        <table class="min-w-full divide-y divide-slate-200 text-sm">
          <thead class="sticky top-0 z-10">
            <tr>
              <th>
                <% next_dir = current_sort == "name" && current_dir == "asc" ? "desc" : "asc" %>
                <%= link_to companies_path(request.query_parameters.merge(sort: "name", dir: next_dir)), class: "inline-flex items-center gap-2" do %>
                  <span>Firma Adı</span>
                  <% if current_sort == "name" %>
                    <span class="text-xs text-slate-400"><%= current_dir == "asc" ? "↑" : "↓" %></span>
                  <% end %>
                <% end %>
              </th>
              <th>
                <% next_dir = current_sort == "authorized_person" && current_dir == "asc" ? "desc" : "asc" %>
                <%= link_to companies_path(request.query_parameters.merge(sort: "authorized_person", dir: next_dir)), class: "inline-flex items-center gap-2" do %>
                  <span>Yetkili Kişi</span>
                  <% if current_sort == "authorized_person" %>
                    <span class="text-xs text-slate-400"><%= current_dir == "asc" ? "↑" : "↓" %></span>
                  <% end %>
                <% end %>
              </th>
              <th>
                <% next_dir = current_sort == "phone" && current_dir == "asc" ? "desc" : "asc" %>
                <%= link_to companies_path(request.query_parameters.merge(sort: "phone", dir: next_dir)), class: "inline-flex items-center gap-2" do %>
                  <span>Telefon</span>
                  <% if current_sort == "phone" %>
                    <span class="text-xs text-slate-400"><%= current_dir == "asc" ? "↑" : "↓" %></span>
                  <% end %>
                <% end %>
              </th>
              <th>
                <% next_dir = current_sort == "email" && current_dir == "asc" ? "desc" : "asc" %>
                <%= link_to companies_path(request.query_parameters.merge(sort: "email", dir: next_dir)), class: "inline-flex items-center gap-2" do %>
                  <span>Mail</span>
                  <% if current_sort == "email" %>
                    <span class="text-xs text-slate-400"><%= current_dir == "asc" ? "↑" : "↓" %></span>
                  <% end %>
                <% end %>
              </th>
              <th>
                <% next_dir = current_sort == "tax_number" && current_dir == "asc" ? "desc" : "asc" %>
                <%= link_to companies_path(request.query_parameters.merge(sort: "tax_number", dir: next_dir)), class: "inline-flex items-center gap-2" do %>
                  <span>Vergi No</span>
                  <% if current_sort == "tax_number" %>
                    <span class="text-xs text-slate-400"><%= current_dir == "asc" ? "↑" : "↓" %></span>
                  <% end %>
                <% end %>
              </th>
              <th>
                <% next_dir = current_sort == "tax_office" && current_dir == "asc" ? "desc" : "asc" %>
                <%= link_to companies_path(request.query_parameters.merge(sort: "tax_office", dir: next_dir)), class: "inline-flex items-center gap-2" do %>
                  <span>Vergi Dairesi</span>
                  <% if current_sort == "tax_office" %>
                    <span class="text-xs text-slate-400"><%= current_dir == "asc" ? "↑" : "↓" %></span>
                  <% end %>
                <% end %>
              </th>
              <th class="text-center">
                <% next_dir = current_sort == "active" && current_dir == "asc" ? "desc" : "asc" %>
                <%= link_to companies_path(request.query_parameters.merge(sort: "active", dir: next_dir)), class: "inline-flex items-center gap-2" do %>
                  <span>Durum</span>
                  <% if current_sort == "active" %>
                    <span class="text-xs text-slate-400"><%= current_dir == "asc" ? "↑" : "↓" %></span>
                  <% end %>
                <% end %>
              </th>
              <th class="text-center">
                <% next_dir = current_sort == "offers_count" && current_dir == "asc" ? "desc" : "asc" %>
                <%= link_to companies_path(request.query_parameters.merge(sort: "offers_count", dir: next_dir)), class: "inline-flex items-center gap-2" do %>
                  <span>Teklif</span>
                  <% if current_sort == "offers_count" %>
                    <span class="text-xs text-slate-400"><%= current_dir == "asc" ? "↑" : "↓" %></span>
                  <% end %>
                <% end %>
              </th>
              <th class="text-center">Onay</th>
              <th class="text-right">Aksiyon</th>
            </tr>
          </thead>

          <tbody class="divide-y divide-slate-200 bg-white">
            <% @companies.each do |company| %>
              <tr class="odd:bg-slate-50 even:bg-white hover:bg-slate-100/70">
                <td class="font-medium text-slate-900">
                  <%= company.name %>
                </td>

                <td>
                  <%= company.authorized_person.presence || "-" %>
                </td>

                <td>
                  <% if company.phone.present? %>
                    <%= link_to format_phone(company.phone), "tel:#{phone_digits(company.phone)}", class: "text-slate-700 hover:text-slate-900" %>
                  <% else %>
                    -
                  <% end %>
                </td>

                <td>
                  <% if company.email.present? %>
                    <%= link_to company.email, "mailto:#{company.email}", class: "text-slate-700 hover:text-slate-900" %>
                  <% else %>
                    -
                  <% end %>
                </td>

                <td>
                  <%= format_tax_number(company.tax_number) %>
                </td>

                <td>
                  <%= company.tax_office.presence || "-" %>
                </td>

                <td class="text-center">
                <% if company.active %>
                  <span class="status-circle status-circle-success" title="Aktif" aria-label="Aktif">A</span>
                <% else %>
                  <span class="status-circle status-circle-warn" title="Pasif" aria-label="Pasif">P</span>
                <% end %>
                </td>

                <td class="text-center">
                  <span class="badge-info">
                    <%= company.offers_count || 0 %>
                  </span>
                </td>

                <td class="text-center">
                  <span class="badge-approve">0</span>
                </td>

                <td class="text-right">
                  <details class="relative inline-block text-left">
                    <summary class="list-none">
                      <span class="inline-flex h-9 w-9 items-center justify-center rounded-xl border border-slate-200 bg-white text-slate-600 hover:border-slate-300">
                        <svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round">
                          <circle cx="5" cy="12" r="1.6"/>
                          <circle cx="12" cy="12" r="1.6"/>
                          <circle cx="19" cy="12" r="1.6"/>
                        </svg>
                      </span>
                    </summary>
                    <div class="absolute right-0 z-20 mt-2 w-40 rounded-xl border border-slate-200 bg-white p-1 text-sm shadow-lg">
                      <%= link_to "Gör", company_path(company), class: "block rounded-lg px-3 py-2 text-slate-700 hover:bg-slate-50" %>
                      <%= link_to "Düzenle", edit_company_path(company), class: "block rounded-lg px-3 py-2 text-slate-700 hover:bg-slate-50" %>
                      <%= link_to "Sil",
                            company_path(company),
                            method: :delete,
                            data: { confirm: "Bu müşteriyi silmek istediğinize emin misiniz?" },
                            class: "block rounded-lg px-3 py-2 text-rose-600 hover:bg-rose-50" %>
                    </div>
                  </details>
                </td>
              </tr>
            <% end %>

            <% if @companies.empty? %>
              <tr>
                <td colspan="10" class="py-12 text-center">
                  <div class="mx-auto max-w-sm">
                    <div class="mb-2 text-sm font-semibold text-slate-700">Henüz kayıtlı müşteri yok</div>
                    <div class="text-sm text-slate-500">İlk müşterinizi eklemek için sağ üstteki butonu kullanın.</div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="rounded-2xl bg-slate-50/90 px-4 py-3 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.45)]">
      <div class="flex items-center justify-between gap-3 text-sm">
        <div class="text-slate-600">
          Sayfa <span class="font-semibold text-slate-800"><%= @page %></span>
          <span class="text-slate-400">/</span>
          <span><%= @per_page %> kayit</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="hidden sm:flex items-center gap-1 text-xs">
            <span class="text-slate-500">Sayfa boyutu:</span>
            <% [25, 50, 100].each do |size| %>
              <% active = @per_page == size %>
              <%= link_to size.to_s, companies_path(request.query_parameters.merge(page: 1, per_page: size)),
                    class: "rounded-md px-2 py-1 #{active ? 'bg-slate-800 text-white' : 'bg-white text-slate-700 border border-slate-200'}" %>
            <% end %>
          </div>
          <% if @has_prev %>
            <%= link_to "Onceki", companies_path(request.query_parameters.merge(page: @page - 1, per_page: @per_page)), class: "btn-secondary" %>
          <% else %>
            <span class="btn-secondary opacity-50 pointer-events-none">Onceki</span>
          <% end %>

          <% if @has_next %>
            <%= link_to "Sonraki", companies_path(request.query_parameters.merge(page: @page + 1, per_page: @per_page)), class: "btn-secondary" %>
          <% else %>
            <span class="btn-secondary opacity-50 pointer-events-none">Sonraki</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
