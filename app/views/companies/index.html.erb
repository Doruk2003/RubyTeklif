<div class="min-h-screen bg-gradient-to-b from-slate-50 to-white px-4 py-3">
  <div class="w-full space-y-2">
    <!-- Card 1: Header + Filters -->
    <div class="mt-1 rounded-2xl bg-slate-50/90 p-5 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.45)]">
      <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-2xl font-semibold tracking-tight text-slate-900">Müşteriler</h1>
          <p class="text-sm text-slate-500">Toplam <span class="font-semibold text-slate-800"><%= @companies.size %></span> müşteri</p>
        </div>

        <div class="flex w-full flex-col gap-2 sm:w-auto sm:flex-row sm:items-center">
          <%= link_to "Ana Sayfa", home_path, class: "btn-secondary w-full sm:w-auto" %>
        </div>
      </div>

      <div class="mt-5">
        <%= form_with url: companies_path, method: :get, local: true, class: "grid grid-cols-1 gap-4 md:grid-cols-6" do |f| %>
          <div class="md:col-span-2">
            <%= f.label :q, "Firma Adı / Yetkili", class: "block text-xs font-semibold uppercase tracking-wide text-slate-800/70" %>
            <%= f.search_field :q,
                  value: params[:q],
                  placeholder: "Örn: Acme, Ahmet",
                  class: "form-input" %>
          </div>

          <div>
            <%= f.label :tax_number, "Vergi No", class: "block text-xs font-semibold uppercase tracking-wide text-slate-800/70" %>
            <%= f.text_field :tax_number,
                  value: params[:tax_number],
                  placeholder: "VKN",
                  class: "form-input" %>
          </div>

          <div>
            <%= f.label :has_offers, "Teklif Durumu", class: "block text-xs font-semibold uppercase tracking-wide text-slate-800/70" %>
            <%= f.select :has_offers,
                  options_for_select([
                    ["Tümü", ""],
                    ["Teklif Var", "1"],
                    ["Teklif Yok", "0"]
                  ], params[:has_offers]),
                  {},
                  class: "form-input" %>
          </div>

          <div>
            <%= f.label :active, "Durum", class: "block text-xs font-semibold uppercase tracking-wide text-slate-800/70" %>
            <%= f.select :active,
                  options_for_select([
                    ["Tumu", ""],
                    ["Aktif", "1"],
                    ["Pasif", "0"]
                  ], params[:active]),
                  {},
                  class: "form-input" %>
          </div>

          <div class="flex items-end gap-2 md:col-span-1">
            <%= link_to "Temizle", companies_path, class: "btn-secondary w-full rounded-md" %>
          </div>
          <div class="md:col-span-6">
            <span class="text-xs text-slate-400">İpucu: Filtreler URL ile paylaşılabilir.</span>
          </div>
          <div class="md:col-span-6">
            <%= f.submit "Filtrele", class: "btn-primary w-full rounded-md" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Card 2: List -->
    <div class="rounded-2xl bg-slate-50/90 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.45)]">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-200 text-sm">
          <thead class="table-head">
            <tr>
              <th class="table-th">Firma Adı</th>
              <th class="table-th">Yetkili Kişi</th>
              <th class="table-th">Telefon</th>
              <th class="table-th">Mail</th>
              <th class="table-th">Vergi No</th>
              <th class="table-th">Vergi Dairesi</th>
              <th class="table-th text-center">Durum</th>
              <th class="table-th text-center">Teklif</th>
              <th class="table-th text-right">Aksiyon</th>
            </tr>
          </thead>

          <tbody class="divide-y divide-slate-200 bg-white">
            <% @companies.each do |company| %>
              <tr class="odd:bg-slate-50 even:bg-white hover:bg-slate-100/70">
                <td class="px-5 py-3 font-medium text-slate-900">
                  <%= company.name %>
                </td>

                <td class="px-5 py-3 text-slate-700">
                  <%= company.authorized_person.presence || "-" %>
                </td>

                <td class="px-5 py-3 text-slate-700">
                  <%= company.phone.presence || "-" %>
                </td>

                <td class="px-5 py-3 text-slate-700">
                  <%= company.email.presence || "-" %>
                </td>

                <td class="px-5 py-3 text-slate-700">
                  <%= company.tax_number %>
                </td>

                <td class="px-5 py-3 text-slate-700">
                  <%= company.tax_office.presence || "-" %>
                </td>

                <td class="px-5 py-3 text-center">
                  <% if company.active %>
                    <span class="badge-success">Aktif</span>
                  <% else %>
                    <span class="badge-warn">Pasif</span>
                  <% end %>
                </td>

                <td class="px-5 py-3 text-center">
                  <span class="badge-info">
                    <%= company.offers_count || 0 %>
                  </span>
                </td>

                <td class="px-5 py-3 text-right">
                  <div class="inline-flex items-center gap-2">
                    <%= link_to company_path(company),
                          title: "Gör",
                          aria: { label: "Gör" },
                          class: "inline-flex h-9 w-9 items-center justify-center rounded-xl bg-transparent text-sky-700" do %>
                      <svg viewBox="0 0 24 24" class="h-5 w-5 text-sky-700" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M2.5 12c2.7-4.5 6.3-6.7 9.5-6.7s6.8 2.2 9.5 6.7c-2.7 4.5-6.3 6.7-9.5 6.7s-6.8-2.2-9.5-6.7z"/>
                        <circle cx="12" cy="12" r="3.5"/>
                      </svg>
                    <% end %>

                    <%= link_to edit_company_path(company),
                          title: "Düzenle",
                          aria: { label: "Düzenle" },
                          class: "inline-flex h-9 w-9 items-center justify-center rounded-xl bg-transparent text-amber-600" do %>
                      <svg viewBox="0 0 24 24" class="h-5 w-5 text-amber-600" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M4 20h5l9-9-5-5-9 9v5z"/>
                        <path d="M14 6l4 4"/>
                      </svg>
                    <% end %>

                    <%= link_to company_path(company),
                          method: :delete,
                          data: { confirm: "Bu müşteriyi silmek istediğinize emin misiniz?" },
                          title: "Sil",
                          aria: { label: "Sil" },
                          class: "inline-flex h-9 w-9 items-center justify-center rounded-xl bg-transparent text-rose-600" do %>
                      <svg viewBox="0 0 24 24" class="h-5 w-5 text-rose-600" fill="none" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M5 7h14"/>
                        <path d="M10 5h4"/>
                        <path d="M8 7l1 12h6l1-12"/>
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>

            <% if @companies.empty? %>
              <tr>
                <td colspan="9" class="px-5 py-12 text-center">
                  <div class="mx-auto max-w-sm">
                    <div class="mb-2 text-sm font-semibold text-slate-700">Henüz kayıtlı müşteri yok</div>
                    <div class="text-sm text-slate-500">İlk müşterinizi eklemek için sağ üstteki butonu kullanın.</div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="mt-3">
      <%= link_to "Yeni Müşteri", new_company_path, class: "btn-primary w-full" %>
    </div>
  </div>
</div>


