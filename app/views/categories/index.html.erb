<div class="min-h-screen bg-[#f6f3ee] px-4 pb-3 pt-0">
  <div class="w-full space-y-4">
    <div class="mt-[-2rem] rounded-2xl bg-slate-50/90 p-5 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.25)]">
      <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-2xl font-semibold tracking-tight text-slate-900">Kategoriler</h1>
          <p class="text-sm text-slate-500">Toplam <span class="font-semibold text-slate-800"><%= @categories.size %></span> kategori</p>
        </div>
        <div class="flex w-full flex-col gap-2 sm:w-auto sm:flex-row sm:items-center">
          <%= link_to "Yeni Kategori", new_category_path, class: "btn-primary w-full sm:w-auto" %>
          <%= link_to "Ürünler", products_path, class: "btn-secondary w-full sm:w-auto" %>
        </div>
      </div>

      <div class="mt-4">
        <%= form_with url: categories_path, method: :get, local: true, class: "grid grid-cols-1 gap-3 md:grid-cols-4 md:items-end" do |f| %>
          <div>
            <%= f.label :scope, "Kapsam", class: "block text-xs font-semibold uppercase tracking-wide text-slate-700/80" %>
            <%= f.select :scope,
                  options_for_select([
                    ["Aktif", "active"],
                    ["Arşiv", "archived"],
                    ["Tüm Kayıtlar", "all"]
                  ], @scope || params[:scope] || "active"),
                  {},
                  class: "form-input" %>
          </div>
          <div>
            <%= f.hidden_field :per_page, value: @per_page %>
            <%= f.submit "Filtrele", class: "btn-secondary w-full" %>
          </div>
          <div>
            <%= link_to "Temizle", categories_path(per_page: @per_page), class: "btn-secondary w-full text-center" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="rounded-2xl bg-slate-50/90 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.25)]">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-200 text-sm">
          <thead>
            <tr>
              <th>Ad</th>
              <th>Kod</th>
              <th>Durum</th>
              <th class="text-right">Aksiyon</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-200 bg-white">
            <% @categories.each do |category| %>
              <tr class="odd:bg-slate-50 even:bg-white hover:bg-slate-100/70">
                <td class="font-medium text-slate-900"><%= category["name"].to_s %></td>
                <td><%= category["code"].to_s %></td>
                <td>
                  <% if category["active"] %>
                    <span class="badge-success">Aktif</span>
                  <% else %>
                    <span class="badge-info">Pasif</span>
                  <% end %>
                </td>
                <td class="text-right">
                  <div class="inline-flex items-center gap-2">
                    <%= link_to "Düzenle", edit_category_path(category["id"]), class: "btn-secondary" %>
                    <% if category["deleted_at"].present? %>
                      <%= link_to "Geri Yükle",
                            restore_category_path(category["id"]),
                            method: :patch,
                            data: { confirm: "Bu kategoriyi geri yüklemek istediğinize emin misiniz?" },
                            class: "btn-secondary" %>
                    <% else %>
                      <%= link_to "Arşivle",
                            category_path(category["id"]),
                            method: :delete,
                            data: { confirm: "Bu kategoriyi arşivlemek istediğinize emin misiniz?" },
                            class: "btn-secondary" %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>

            <% if @categories.empty? %>
              <tr>
                <td colspan="4" class="py-10 text-center text-sm text-slate-500">Henüz kategori yok.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="rounded-2xl bg-slate-50/90 px-4 py-3 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.25)]">
      <div class="flex items-center justify-between gap-3 text-sm">
        <div class="text-slate-600">
          Sayfa <span class="font-semibold text-slate-800"><%= @page %></span>
          <span class="text-slate-400">/</span>
          <span><%= @per_page %> kayıt</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="hidden sm:flex items-center gap-1 text-xs">
            <span class="text-slate-500">Sayfa boyutu:</span>
            <% [25, 50, 100].each do |size| %>
              <% active = @per_page == size %>
              <%= link_to size.to_s, categories_path(request.query_parameters.merge(page: 1, per_page: size)),
                    class: "rounded-md px-2 py-1 #{active ? 'bg-slate-800 text-white' : 'bg-white text-slate-700 border border-slate-200'}" %>
            <% end %>
          </div>
          <% if @has_prev %>
            <%= link_to "Önceki", categories_path(request.query_parameters.merge(page: @page - 1, per_page: @per_page)), class: "btn-secondary" %>
          <% else %>
            <span class="btn-secondary opacity-50 pointer-events-none">Önceki</span>
          <% end %>

          <% if @has_next %>
            <%= link_to "Sonraki", categories_path(request.query_parameters.merge(page: @page + 1, per_page: @per_page)), class: "btn-secondary" %>
          <% else %>
            <span class="btn-secondary opacity-50 pointer-events-none">Sonraki</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
