<div class="min-h-screen bg-[#f6f3ee] px-4 pb-3 pt-0">
  <div class="w-full space-y-4">
    <div class="mt-0 rounded-2xl bg-slate-50/90 p-5 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.25)]">
      <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-2xl font-semibold tracking-tight text-slate-900">Kategoriler</h1>
          <p class="text-sm text-slate-500">Ürün kategorilerini yönetin.</p>
        </div>
        <div class="flex w-full flex-col gap-2 sm:w-auto sm:flex-row sm:items-center">
          <%= link_to "Yeni Kategori", new_category_path, class: "btn-primary w-full sm:w-auto" %>
          <%= link_to "Ürünler", products_path, class: "btn-secondary w-full sm:w-auto" %>
        </div>
      </div>
    </div>

    <div class="rounded-2xl bg-slate-50/90 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.25)]">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-200 text-sm">
          <thead>
            <tr>
              <th>Ad</th>
              <th>Kod</th>
              <th>Durum</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-200 bg-white">
            <% @categories.each do |category| %>
              <tr class="odd:bg-slate-50 even:bg-white">
                <td class="font-medium text-slate-900"><%= category["name"].to_s %></td>
                <td><%= category["code"].to_s %></td>
                <td>
                  <% if category["active"] %>
                    <span class="badge-success">Aktif</span>
                  <% else %>
                    <span class="badge-info">Pasif</span>
                  <% end %>
                </td>
              </tr>
            <% end %>

            <% if @categories.empty? %>
              <tr>
                <td colspan="3" class="py-10 text-center text-sm text-slate-500">Henüz kategori yok.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="rounded-2xl bg-slate-50/90 px-4 py-3 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.25)]">
      <div class="flex items-center justify-between gap-3 text-sm">
        <div class="text-slate-600">
          Sayfa <span class="font-semibold text-slate-800"><%= @page %></span>
          <span class="text-slate-400">/</span>
          <span><%= @per_page %> kayıt</span>
        </div>
        <div class="flex items-center gap-2">
          <% if @has_prev %>
            <%= link_to "Önceki", categories_path(request.query_parameters.merge(page: @page - 1, per_page: @per_page)), class: "btn-secondary" %>
          <% else %>
            <span class="btn-secondary opacity-50 pointer-events-none">Önceki</span>
          <% end %>

          <% if @has_next %>
            <%= link_to "Sonraki", categories_path(request.query_parameters.merge(page: @page + 1, per_page: @per_page)), class: "btn-secondary" %>
          <% else %>
            <span class="btn-secondary opacity-50 pointer-events-none">Sonraki</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
