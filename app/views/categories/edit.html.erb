<div class="container-fluid py-2">
  <div class="row g-2">
    <div class="col-12">
      <div class="card shadow-sm app-header-card">
        <div class="card-body d-flex flex-column flex-sm-row align-items-sm-center justify-content-between gap-3">
          <div>
            <h1 class="h4 mb-1">Kategori Duzenle</h1>
            <p class="text-secondary mb-0">Kategori bilgilerini guncelleyin.</p>
          </div>
          <div class="d-flex flex-wrap align-items-center gap-2 app-header-actions">
            <%= list_nav_button(categories_path, label: "Kategori Listesi", class_name: "app-header-icon-btn") %>
            <%= home_nav_button(home_path, class_name: "app-header-icon-btn", icon: "home") %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body">
          <% if @category.present? %>
            <%= render "form",
                  category: @category,
                  form_url: category_path(@category["id"] || @category[:id] || params[:id]),
                  form_method: :patch,
                  submit_label: "Kategoriyi Guncelle" %>
          <% else %>
            <div class="alert alert-secondary mb-0">Kategori bulunamadi.</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
