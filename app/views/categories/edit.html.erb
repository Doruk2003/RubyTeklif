<div class="container-fluid py-2">
  <div class="row g-2">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body d-flex flex-column flex-sm-row align-items-sm-center justify-content-between gap-3">
          <div>
            <h1 class="h4 mb-1">Kategori Düzenle</h1>
            <p class="text-secondary mb-0">Kategori bilgilerini güncelleyin.</p>
          </div>
          <div class="d-flex flex-column flex-sm-row align-items-stretch align-items-sm-center gap-2 w-100">
            <%= link_to "Kategori Listesi", categories_path, class: "btn-secondary w-100" %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body">
          <% if @category.present? %>
            <%= render "form",
                  category: @category,
                  form_url: category_path(@category["id"] || @category[:id] || params[:id]),
                  form_method: :patch,
                  submit_label: "Kategoriyi Güncelle" %>
          <% else %>
            <div class="alert alert-secondary mb-0">Kategori bulunamadı.</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


