<div class="container-fluid py-2">
  <div class="row g-2">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body d-flex flex-column flex-sm-row align-items-sm-center justify-content-between gap-3">
          <div>
            <h1 class="h4 mb-1">Yeni Kategori</h1>
            <p class="text-secondary mb-0">Ürünler için yeni kategori tanımlayın.</p>
          </div>
          <div class="d-flex flex-column flex-sm-row align-items-stretch align-items-sm-center gap-2 w-100">
            <%= list_nav_button(categories_path, label: "Kategori Listesi") %>
            <%= home_nav_button(home_path) %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body">
          <%= render "form",
                category: @category || {},
                form_url: categories_path,
                form_method: :post,
                submit_label: "Kategoriyi Kaydet" %>
        </div>
      </div>
    </div>
  </div>
</div>


