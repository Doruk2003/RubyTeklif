<div class="min-h-screen bg-[#f6f3ee] px-4 pb-3 pt-0">
  <div class="w-full space-y-4">
    <div class="mt-0 rounded-2xl bg-slate-50/90 p-5 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.25)]">
      <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-2xl font-semibold tracking-tight text-slate-900">Yeni Kategori</h1>
          <p class="text-sm text-slate-500">Ürünler için yeni kategori tanımlayın.</p>
        </div>
        <div class="flex w-full flex-col gap-2 sm:w-auto sm:flex-row sm:items-center">
          <%= link_to "Kategori Listesi", categories_path, class: "btn-secondary w-full sm:w-auto" %>
        </div>
      </div>
    </div>

    <div class="rounded-2xl bg-slate-50/90 p-5 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.25)]">
      <div class="rounded-2xl bg-white p-6 shadow-sm">
        <%= form_with url: categories_path, scope: :category, local: true, class: "grid grid-cols-1 gap-5 md:grid-cols-2" do |f| %>
          <%= hidden_field_tag :return_to, params[:return_to].to_s %>

          <div>
            <%= f.label :name, "Kategori Adı", class: "block text-xs font-semibold uppercase tracking-wide text-slate-800/70" %>
            <%= f.text_field :name, value: @category[:name], placeholder: "Örn: Mobilya Aksesuar", class: "form-input" %>
          </div>

          <div>
            <%= f.label :code, "Kategori Kodu", class: "block text-xs font-semibold uppercase tracking-wide text-slate-800/70" %>
            <%= f.text_field :code, value: @category[:code], placeholder: "orn: furniture_accessory", class: "form-input" %>
          </div>

          <div class="flex items-center gap-3">
            <%= f.check_box :active, { checked: @category.key?(:active) ? @category[:active] : true, class: "h-4 w-4 rounded border-slate-300" }, "1", "0" %>
            <%= f.label :active, "Aktif", class: "text-sm text-slate-700" %>
          </div>

          <div class="md:col-span-2">
            <%= f.submit "Kategoriyi Kaydet", class: "btn-primary w-full" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
