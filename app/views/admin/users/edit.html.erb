<div class="min-h-screen bg-[#f6f3ee] px-4 pb-3 pt-0">
  <div class="w-full space-y-4">
    <div class="mt-[-2rem] rounded-2xl bg-slate-50/90 p-5 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.25)]">
      <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-2xl font-semibold tracking-tight text-slate-900">Admin Panel</h1>
          <p class="text-sm text-slate-500">Rol güncelle</p>
        </div>
        <div class="flex w-full flex-col gap-2 sm:w-auto sm:flex-row sm:items-center">
          <%= link_to "Listeye Dön", admin_users_path, class: "btn-secondary w-full sm:w-auto" %>
        </div>
      </div>
    </div>

    <div class="rounded-2xl bg-slate-50/90 p-5 shadow-[0_18px_40px_-16px_rgba(15,23,42,0.25)]">
      <div class="rounded-2xl bg-white p-6 shadow-sm">
        <% if @user.present? %>
          <div class="text-sm text-slate-700">
            <div class="font-semibold text-slate-900"><%= @user["email"].to_s %></div>
          </div>

          <%= form_with url: admin_user_path(@user["id"]), method: :patch, local: true, class: "mt-4 space-y-4" do |f| %>
            <div>
              <%= f.label :role, "Rol", class: "block text-xs font-semibold uppercase tracking-wide text-slate-800/70" %>
              <%= f.select :role,
                    options_for_select(Roles::ASSIGNABLE_ROLE_OPTIONS, @user["role"].to_s),
                    {},
                    class: "form-input" %>
            </div>
            <%= f.submit "Kaydet", class: "btn-primary w-full", data: { turbo_confirm: "Kullanıcı rolü güncellensin mi?" } %>
          <% end %>
        <% else %>
          <div class="text-sm text-slate-500">Kullanıcı bulunamadı.</div>
        <% end %>
      </div>
    </div>
  </div>
</div>
