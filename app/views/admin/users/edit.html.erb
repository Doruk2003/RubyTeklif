<div class="row g-3">
  <div class="col-12" style="z-index: 10; position: relative;">
    <div class="card shadow-sm app-header-card">
      <div class="card-body d-flex flex-column flex-sm-row align-items-sm-center justify-content-between gap-3">
        <div>
          <h1 class="h4 mb-1 text-white">Admin Panel</h1>
          <p class="text-secondary mb-0">Kullanıcı Düzenle</p>
        </div>
        <div class="d-flex flex-wrap align-items-center gap-2 app-header-actions">
          <%= list_nav_button(admin_users_path, label: "Listeye Dön", class_name: "app-header-icon-btn") %>
          <%= home_nav_button(home_path, label: "Ana Sayfa", icon: "home", class_name: "app-header-icon-btn") %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-12">
    <div class="card shadow-sm">
      <div class="card-body p-4">
        <% if @user.present? %>
          <div class="mb-4">
            <div class="small text-secondary text-uppercase fw-bold mb-1" style="font-size: 0.7rem; letter-spacing: 0.05em;">Kullanıcı E-posta</div>
            <div class="h5 fw-bold text-dark mb-0"><%= @user["email"].to_s %></div>
          </div>

          <%= form_with url: admin_user_path(@user["id"]), method: :patch, local: true, scope: :user, class: app_form_class("d-grid gap-3") do |f| %>
            <div class="form-floating">
              <%= f.select :role,
                    options_for_select(Roles::ASSIGNABLE_ROLE_OPTIONS, @user["role"].to_s),
                    {},
                    class: "form-select",
                    data: { float_empty: true } %>
              <%= f.label :role, "Rol" %>
            </div>

            <div class="mt-3">
              <%= f.submit "Rolü Güncelle", class: "btn btn-primary w-100 py-3 fw-bold text-uppercase", style: "letter-spacing: 0.1em;", data: { turbo_confirm: "Kullanıcı rolü güncellensin mi?" } %>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-5">
            <span class="material-symbols-outlined fs-1 text-muted mb-3">person_off</span>
            <div class="text-secondary">Kullanıcı bulunamadı.</div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
