<div class="container-fluid py-2">
  <div class="row g-2">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body d-flex flex-column flex-sm-row align-items-sm-center justify-content-between gap-3">
          <div>
            <h1 class="h4 mb-1">Admin Panel</h1>
            <p class="text-secondary mb-0">Rol güncelle</p>
          </div>
          <div class="d-flex flex-wrap align-items-center gap-2">
            <%= link_to "Listeye Dön", admin_users_path, class: "btn-secondary w-100" %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body">
          <% if @user.present? %>
            <div class="small text-secondary mb-3">
              <div class="fw-semibold text-body"><%= @user["email"].to_s %></div>
            </div>

            <%= form_with url: admin_user_path(@user["id"]), method: :patch, local: true, class: "d-grid gap-3" do |f| %>
              <div>
                <%= f.label :role, "Rol", class: "form-label text-uppercase small fw-semibold text-secondary mb-1" %>
                <%= f.select :role,
                      options_for_select(Roles::ASSIGNABLE_ROLE_OPTIONS, @user["role"].to_s),
                      {},
                      class: "form-input" %>
              </div>
              <%= f.submit "Kaydet", class: "btn-primary w-100", data: { turbo_confirm: "Kullanıcı rolü güncellensin mi?" } %>
            <% end %>
          <% else %>
            <div class="text-secondary">Kullanıcı bulunamadı.</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


