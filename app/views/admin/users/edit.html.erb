<div class="container-fluid py-2 admin-users-page">
  <div class="row g-3">
    <div class="col-12" style="z-index: 10; position: relative;">
      <div class="card shadow-sm app-header-card">
        <div class="card-body d-flex flex-column flex-sm-row align-items-sm-center justify-content-between gap-3">
          <div>
            <h1 class="h4 mb-1">Admin Panel</h1>
            <p class="text-secondary mb-0">Kullanici Rolleri</p>
          </div>
          <div class="d-flex flex-wrap align-items-center gap-2 app-header-actions">
            <%= list_nav_button(admin_users_path, label: "Listeye Don", class_name: "app-header-icon-btn") %>
            <%= home_nav_button(home_path, label: "Ana Sayfa", icon: "home", class_name: "app-header-icon-btn") %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body">
          <% if @user.present? %>
            <div class="small text-secondary mb-3">
              <div class="fw-semibold text-body"><%= @user["email"].to_s %></div>
            </div>

            <%= form_with url: admin_user_path(@user["id"]), method: :patch, local: true, scope: :user, class: app_form_class("d-grid gap-3") do |f| %>
              <div class="form-floating">
                <%= f.select :role,
                      options_for_select(Roles::ASSIGNABLE_ROLE_OPTIONS, @user["role"].to_s),
                      {},
                      class: "form-select",
                      data: { float_empty: true } %>
                <%= f.label :role, "Rol" %>
              </div>
              <%= f.submit "Kaydet", class: "btn btn-success w-100", data: { turbo_confirm: "Kullanıcı rolü güncellensin mi?" } %>
            <% end %>
          <% else %>
            <div class="text-secondary">Kullanıcı bulunamadi.</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
