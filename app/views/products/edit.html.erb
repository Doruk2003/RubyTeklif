<div class="row g-3">
    <div class="col-12">
      <div class="card shadow-sm app-header-card">
        <div class="card-body d-flex flex-column flex-sm-row align-items-sm-center justify-content-between gap-3">
          <div class="d-flex align-items-center gap-3">
            <div>
              <h1 class="h4 fw-bold mb-0 text-white"><%= @product["name"] %></h1>
              <div class="d-flex align-items-center gap-2 mt-1">
                <span class="badge bg-white bg-opacity-10 text-white-50 border border-white border-opacity-10 fw-normal small">Seçili Kayıt: <%= @product["sku"].presence || "No SKU" %></span>
                <span class="text-white-50 small">|</span>
                <span class="text-white-50 small font-monospace"><%= @product["barcode"].presence || "Barkod Yok" %></span>
                <% if @product["gtip_code"].present? %>
                  <span class="text-white-50 small">|</span>
                  <span class="text-white-50 small fw-light px-2 bg-white bg-opacity-5 rounded">GTIP: <%= @product["gtip_code"] %></span>
                <% end %>
              </div>
            </div>
          </div>
          <div class="d-flex flex-wrap align-items-center gap-2 app-header-actions justify-content-end">
            <%= icon_link_button(new_category_path(return_to: request.fullpath), label: "Yeni Kategori", icon: "category", class_name: "app-header-icon-btn") %>
            <%= icon_link_button(new_brand_path(return_to: request.fullpath), label: "Yeni Marka", icon: "branding_watermark", class_name: "app-header-icon-btn") %>
            <%= list_nav_button(products_path, label: "Urun Listesi", class_name: "app-header-icon-btn") %>
            <%= home_nav_button(home_path, class_name: "app-header-icon-btn", icon: "home") %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-12">
      <% if @product.present? %>
        <% existing_photo_count = @product_images.to_a.size %>
        <% remaining_photo_count = [6 - existing_photo_count, 0].max %>

        <%= render "form",
              product: @product,
              url: product_path(@product["id"]),
              method: :patch,
              submit_label: "BİLGİLERİ GÜNCELLE",
              submit_confirm: "Ürün bilgileri güncellensin mi?",
              remaining_photo_count: remaining_photo_count,
              existing_photo_count: existing_photo_count,
              existing_photos: @product_images %>
      <% else %>
        <div class="text-secondary">Urun bulunamadi.</div>
      <% end %>
    </div>
  </div>
</div>



